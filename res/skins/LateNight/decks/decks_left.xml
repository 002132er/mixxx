<Template>
  <SetVariable name="Type">deck</SetVariable>
  <WidgetGroup>
    <Layout>horizontal</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>

      <WidgetGroup>
        <ObjectName>DecksLeft</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>

          <Template src="skin:/decks/deck.xml">
            <SetVariable name="ChanNum">1</SetVariable>
            <SetVariable name="DeckGroup">12</SetVariable>
            <SetVariable name="SignalColor"><Variable name="SignalColor_12"/></SetVariable>
            <SetVariable name="BgColor"><Variable name="BgColorOverview_12"/></SetVariable>
          </Template>

          <WidgetGroup>
            <Layout>horizontal</Layout>
            <SizePolicy>me,min</SizePolicy>
            <Children>
              <Template src="skin:/decks/deck.xml">
                <SetVariable name="ChanNum">3</SetVariable>
                <SetVariable name="DeckGroup">34</SetVariable>
                <SetVariable name="SignalColor"><Variable name="SignalColor_34"/></SetVariable>
                <SetVariable name="BgColor"><Variable name="BgColorOverview_34"/></SetVariable>
              </Template>
            </Children>
            <Connection>
              <ConfigKey>[Skin],show_4decks</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>

          <!-- Extra space below decks in Classic scheme.
              This needs to be an extra WidgetGroup because 'highlight' property
              is only applied to the state active when the skin is loaded -->
          <WidgetGroup>
            <Size>0me,<Variable name="SeparatorWidthDecksBottom"/></Size>
            <Connection>
              <ConfigKey>[Master],show_mixer</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>

        </Children>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
