<Template>
  <WidgetGroup>
    <ObjectName>DeckContainer</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>

      <WidgetGroup>
        <ObjectName>Deck<Variable name="ChanNum"/></ObjectName>
        <Layout>horizontal</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>

          <WidgetGroup>
            <ObjectName>DeckRows12345</ObjectName>
            <SizePolicy>me,min</SizePolicy>
            <Layout>vertical</Layout>
            <Children>

              <Template src="skin:/decks/row_1_keyVinylFx.xml"/>

              <WidgetGroup>
                <ObjectName>DeckRows234</ObjectName>
                <SizePolicy>me,min</SizePolicy>
                <Layout>horizontal</Layout>
                <Children>

                  <WidgetGroup><!-- Big spinny /cover -->
                    <SizePolicy>min,min</SizePolicy>
                    <Layout>horizontal</Layout>
                    <Children>
                      <WidgetGroup>
                        <SizePolicy>min,min</SizePolicy>
                        <Layout>horizontal</Layout>
                        <Children>
                          <WidgetGroup>
                            <ObjectName>SpinnyCoverContainerBig</ObjectName>
                            <Layout>horizontal</Layout>
                            <SizePolicy>f,f</SizePolicy>
                            <Children>
                              <SingletonContainer>
                                <ObjectName>SpinnyCoverart<Variable name="ChanNum"/></ObjectName>
                              </SingletonContainer>
                            </Children>
                          </WidgetGroup>
                        </Children>
                        <Connection>
                          <ConfigKey persist="true">[LateNight],show_spinny_cover</ConfigKey>
                          <BindProperty>visible</BindProperty>
                        </Connection>
                      </WidgetGroup>
                    </Children>
                    <Connection>
                      <ConfigKey persist="true">[Skin],show_big_spinny_coverart</ConfigKey>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup><!-- Big spinny /cover -->

                  <WidgetGroup>
                    <SizePolicy>me,min</SizePolicy>
                    <Layout>vertical</Layout>
                    <Children>
                      <Template src="skin:/decks/row_2_3_TitleArtistTime.xml" />
                      <Template src="skin:/decks/row_4_overviewSpinny.xml" />
                    </Children>
                  </WidgetGroup>

                  <!--WidgetGroup>
                    <Size>3f,0min</Size>
                    <Connection>
                      <ConfigKey persist="true">[Skin],show_rate_controls</ConfigKey>
                      <Transform><Not/></Transform>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup-->
                </Children>
              </WidgetGroup><!-- DeckRows234 -->

              <Template src="skin:/decks/row_5_transportLoopJump.xml" />
            </Children>
            <Connection>
              <ConfigKey persist="true">[Skin],show_rate_controls</ConfigKey>
              <BindProperty>highlight</BindProperty>
            </Connection>
          </WidgetGroup> <!-- DeckRows12345 -->

          <Template src="skin:/decks/rate_controls.xml"/>
        </Children>
      </WidgetGroup><!-- DeckN -->
    </Children>
  </WidgetGroup>
</Template>
