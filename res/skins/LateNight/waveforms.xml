<Template>
  <WidgetGroup>
    <Layout>vertical</Layout>
    <Size>0me,40min</Size>
    <Children>

      <WidgetGroup>
        <Layout>horizontal</Layout>
        <SizePolicy>me,me</SizePolicy>
        <Children>
          <Template src="skin:spinny.xml">
            <SetVariable name="channum">3</SetVariable>
            <SetVariable name="color">2</SetVariable>
          </Template>
          <Template src="skin:waveform.xml">
            <SetVariable name="channum">3</SetVariable>
            <SetVariable name="signal_color">#09B2AE</SetVariable>
            <SetVariable name="SignalBgColor">#012322</SetVariable>
            <SetVariable name="SignalRGBLowColor">#cb3433</SetVariable>
            <SetVariable name="SignalRGBMidColor">#00ff33</SetVariable>
            <SetVariable name="SignalRGBHighColor">#0034fe</SetVariable>
          </Template>
        </Children>
        <Connection>
          <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

      <WidgetGroup>
        <Layout>horizontal</Layout>
        <SizePolicy>me,me</SizePolicy>
        <Children>

          <SizeAwareStack>
            <Size>1f,0me</Size>
            <Children>

              <WidgetStack><!-- Spinny 20x20 -->
                <MinimumSize>1,-1</MinimumSize>
                <MaximumSize>1,39</MaximumSize>
                <Children>
                  <WidgetGroup trigger="[Latenight],spinny_20x20"><Size>1f,1f</Size></WidgetGroup>
                  <WidgetGroup trigger="[Latenight],spinny_40x40"><Size>1f,1f</Size></WidgetGroup>
                  <WidgetGroup trigger="[Latenight],spinny_70x70"><Size>1f,1f</Size></WidgetGroup>
                </Children>
              </WidgetStack>

              <WidgetStack><!-- Spinny 40x40 -->
                <MinimumSize>0,40</MinimumSize>
                <MaximumSize>0,69</MaximumSize>
                <Children>
                  <WidgetGroup trigger="[Latenight],spinny_40x40"><Size>1f,1f</Size></WidgetGroup>
                  <WidgetGroup trigger="[Latenight],spinny_20x20"><Size>1f,1f</Size></WidgetGroup>
                  <WidgetGroup trigger="[Latenight],spinny_70x70"><Size>1f,1f</Size></WidgetGroup>
                </Children>
              </WidgetStack>

              <WidgetStack><!-- Spinny 70x70 -->
                <MinimumSize>0,70</MinimumSize>
                <Children>
                  <WidgetGroup trigger="[Latenight],spinny_70x70"><Size>1f,1f</Size></WidgetGroup>
                  <WidgetGroup trigger="[Latenight],spinny_20x20"><Size>1f,1f</Size></WidgetGroup>
                  <WidgetGroup trigger="[Latenight],spinny_40x40"><Size>1f,1f</Size></WidgetGroup>
                </Children>
              </WidgetStack>
            </Children>
          </SizeAwareStack>
          <Template src="skin:spinny.xml">
            <SetVariable name="channum">1</SetVariable>
            <SetVariable name="color">1</SetVariable>
          </Template>
          <Template src="skin:waveform.xml">
            <SetVariable name="channum">1</SetVariable>
            <SetVariable name="signal_color">#E7C413</SetVariable>
            <SetVariable name="SignalBgColor">#2f290a</SetVariable>
            <SetVariable name="SignalRGBLowColor">#ff2a00</SetVariable>
            <SetVariable name="SignalRGBMidColor">#33f600</SetVariable>
            <SetVariable name="SignalRGBHighColor">#332acc</SetVariable>
          </Template>

          <WidgetGroup>
            <ObjectName>DebugResizingSpinnies</ObjectName>
            <Size>10f,0me</Size>
          </WidgetGroup>
        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <Layout>horizontal</Layout>
        <SizePolicy>me,me</SizePolicy>
        <Children>
          <Template src="skin:spinny.xml">
            <SetVariable name="channum">2</SetVariable>
            <SetVariable name="color">1</SetVariable>
          </Template>
          <Template src="skin:waveform.xml">
            <SetVariable name="channum">2</SetVariable>
            <SetVariable name="signal_color">#E7C413</SetVariable>
            <SetVariable name="SignalBgColor">#2f290a</SetVariable>
            <SetVariable name="SignalRGBLowColor">#ff2a00</SetVariable>
            <SetVariable name="SignalRGBMidColor">#33f600</SetVariable>
            <SetVariable name="SignalRGBHighColor">#332acc</SetVariable>
          </Template>
        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <Layout>horizontal</Layout>
        <SizePolicy>me,me</SizePolicy>
        <Children>
          <Template src="skin:spinny.xml">
            <SetVariable name="channum">4</SetVariable>
            <SetVariable name="color">2</SetVariable>
          </Template>
          <Template src="skin:waveform.xml">
            <SetVariable name="channum">4</SetVariable>
            <SetVariable name="signal_color">#09B2AE</SetVariable>
            <SetVariable name="SignalBgColor">#012322</SetVariable>
            <SetVariable name="SignalRGBLowColor">#cb3433</SetVariable>
            <SetVariable name="SignalRGBMidColor">#00ff33</SetVariable>
            <SetVariable name="SignalRGBHighColor">#0034fe</SetVariable>
          </Template>
        </Children>
        <Connection>
          <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
