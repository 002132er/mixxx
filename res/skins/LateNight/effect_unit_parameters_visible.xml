<!DOCTYPE template>
<!--
  Description:
    An effect unit widget.
  Variables:
    group: The group for the controls.
-->
<Template>
  <SetVariable name="FxRack_FxUnit">EffectRack<Variable name="FxRack"/>_EffectUnit<Variable name="FxUnit"/></SetVariable>

  <WidgetGroup>
    <ObjectName>EffectUnit<Variable name="FxUnit"/></ObjectName>
    <Layout>vertical</Layout>
    <SizePolicy>me,max</SizePolicy>
    <Children>

      <WidgetGroup><!-- Show parameters -->
        <SizePolicy>me,me</SizePolicy>
        <Layout>horizontal</Layout>
        <Children>
          <WidgetGroup>
            <ObjectName>EffectRows</ObjectName>
            <SizePolicy>me,me</SizePolicy>
            <Layout>vertical</Layout>
            <BackPath>background_tile.png</BackPath>
            <Children>
              <SingletonContainer>
                <ObjectName>FxUnit<Variable name="FxUnit"/>_FxSlot1</ObjectName>
              </SingletonContainer>

              <WidgetGroup><ObjectName>Spacer58</ObjectName><Size>1me,1f</Size></WidgetGroup>

              <SingletonContainer>
                <ObjectName>FxUnit<Variable name="FxUnit"/>_FxSlot2</ObjectName>
              </SingletonContainer>

              <WidgetGroup><ObjectName>Spacer58</ObjectName><Size>1me,1f</Size></WidgetGroup>

              <SingletonContainer>
                <ObjectName>FxUnit<Variable name="FxUnit"/>_FxSlot3</ObjectName>
              </SingletonContainer>
            </Children>
          </WidgetGroup>

          <WidgetGroup><!-- Enable + Mix/Super + Pfl -->
            <ObjectName>EffectUnitControls</ObjectName>
            <Layout>vertical</Layout>
            <SizePolicy>max,min</SizePolicy>
            <Children>
              <WidgetGroup><Size>,3f</Size></WidgetGroup>

              <SingletonContainer>
                <ObjectName>FxUnit<Variable name="FxUnit"/>_ExpandCollapseButton</ObjectName>
              </SingletonContainer>

              <WidgetGroup><Size>,3me</Size></WidgetGroup>

              <SingletonContainer>
                <ObjectName>FxUnit<Variable name="FxUnit"/>_DryWetKnob</ObjectName>
              </SingletonContainer>

              <WidgetGroup><Size>,3me</Size></WidgetGroup>

              <SingletonContainer>
                <ObjectName>FxUnit<Variable name="FxUnit"/>_SuperKnob</ObjectName>
              </SingletonContainer>

              <WidgetGroup><Size>,3me</Size></WidgetGroup>

              <SingletonContainer>
                <ObjectName>FxUnit<Variable name="FxUnit"/>_PflButton</ObjectName>
              </SingletonContainer>

              <WidgetGroup><Size>,3f</Size></WidgetGroup>
            </Children>
          </WidgetGroup><!-- /Enable + Mix/Super + Pfl -->
        </Children>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
