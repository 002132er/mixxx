<Template>
  <WidgetGroup>
    <SizePolicy>min,min</SizePolicy>
    <Layout>vertical</Layout>
    <Children>

      <WidgetGroup>
        <ObjectName>Mixer</ObjectName>
        <SizePolicy>min,me</SizePolicy>
        <Layout>horizontal</Layout>
        <Children>

          <WidgetGroup>
            <ObjectName>MixerChannelControls</ObjectName>
            <Layout>horizontal</Layout>
            <SizePolicy>min,min</SizePolicy>
            <Children>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Size>2f,min</Size>
              </WidgetGroup>

              <WidgetGroup>
                <ObjectName>MixerContainer</ObjectName>
                <Layout>vertical</Layout>
                <SizePolicy>max,min</SizePolicy>
                <Children>
                  <WidgetGroup><!-- Channel controls -->
                    <SizePolicy>max,min</SizePolicy>
                    <Layout>horizontal</Layout>
                    <Children>
                      <WidgetGroup>
                        <SizePolicy>max,min</SizePolicy>
                        <Layout>horizontal</Layout>
                        <Children>
                          <Template src="skin:mixer_channel_4decks.xml">
                            <SetVariable name="channum">3</SetVariable>
                            <SetVariable name="deckSide">Left</SetVariable>
                          </Template>
                        </Children>
                        <Connection>
                          <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
                          <BindProperty>visible</BindProperty>
                        </Connection>
                      </WidgetGroup>

                      <Template src="skin:mixer_channel_left.xml">
                        <SetVariable name="channum">1</SetVariable>
                        <SetVariable name="deckSide">Left</SetVariable>
                      </Template>

                      <WidgetGroup>
                        <ObjectName>MasterVuMeter2ch</ObjectName>
                        <Layout>vertical</Layout>
                        <SizePolicy>max,me</SizePolicy>
                        <Children>
                          <!-- Spacer -->
                          <WidgetGroup>
                            <Layout>vertical</Layout>
                            <Size>1min,0me</Size>
                            <Children/>
                          </WidgetGroup>

                          <WidgetGroup><!-- Peak indicator L +R -->
                            <Layout>horizontal</Layout>
                            <SizePolicy>max,max</SizePolicy>
                            <Children>
                              <StatusLight>
                                <TooltipId>master_PeakIndicator</TooltipId>
                                <Style></Style>
                                <PathStatusLight>buttons/btn_clipping1_over.png</PathStatusLight>
                                <PathBack>buttons/btn_clipping1.png</PathBack>
                                <Connection>
                                  <ConfigKey>[Master],PeakIndicatorL</ConfigKey>
                                </Connection>
                              </StatusLight>
                              <StatusLight>
                                <TooltipId>master_PeakIndicator</TooltipId>
                                <Style></Style>
                                <PathStatusLight>buttons/btn_clipping1_over.png</PathStatusLight>
                                <PathBack>buttons/btn_clipping1.png</PathBack>
                                <Connection>
                                  <ConfigKey>[Master],PeakIndicatorR</ConfigKey>
                                </Connection>
                              </StatusLight>
                            </Children>
                          </WidgetGroup><!-- /Peak indicator L +R -->

                          <WidgetGroup><!-- Level L +R -->
                            <Layout>horizontal</Layout>
                            <SizePolicy>max,max</SizePolicy>
                            <Children>
                              <VuMeter>
                                <TooltipId>master_VuMeterL</TooltipId>
                                <Style></Style>
                                <PathVu>buttons/btn_volume_display1_over.png</PathVu>
                                <PathBack>buttons/btn_volume_display1.png</PathBack>
                                <Horizontal>false</Horizontal>
                                <PeakHoldSize>5</PeakHoldSize>
                                <PeakHoldTime>500</PeakHoldTime>
                                <PeakFallTime>50</PeakFallTime>
                                <PeakFallStep>2</PeakFallStep>
                                <Connection>
                                  <ConfigKey>[Master],VuMeterL</ConfigKey>
                                </Connection>
                              </VuMeter>
                              <VuMeter>
                                <TooltipId>master_VuMeterR</TooltipId>
                                <Style></Style>
                                <PathVu>buttons/btn_volume_display1_over.png</PathVu>
                                <PathBack>buttons/btn_volume_display1.png</PathBack>
                                <Horizontal>false</Horizontal>
                                <PeakHoldSize>5</PeakHoldSize>
                                <PeakHoldTime>500</PeakHoldTime>
                                <PeakFallTime>50</PeakFallTime>
                                <PeakFallStep>2</PeakFallStep>
                                <Connection>
                                  <ConfigKey>[Master],VuMeterR</ConfigKey>
                                </Connection>
                              </VuMeter>
                            </Children>
                          </WidgetGroup><!-- /Level L +R -->

                          <!-- Spacer -->
                          <WidgetGroup>
                            <Layout>vertical</Layout>
                            <Size>1min,5f</Size>
                            <Children/>
                          </WidgetGroup>
                        </Children>
                        <Connection>
                          <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
                          <BindProperty>visible</BindProperty>
                          <Transform><Invert/><Not/></Transform>
                        </Connection>
                      </WidgetGroup>

                      <Template src="skin:mixer_channel_right.xml">
                        <SetVariable name="channum">2</SetVariable>
                        <SetVariable name="deckSide">Right</SetVariable>
                      </Template>

                      <WidgetGroup>
                        <SizePolicy>max,min</SizePolicy>
                        <Layout>horizontal</Layout>
                        <Children>
                          <Template src="skin:mixer_channel_4decks.xml">
                            <SetVariable name="channum">4</SetVariable>
                            <SetVariable name="deckSide">Right</SetVariable>
                          </Template>
                        </Children>
                        <Connection>
                          <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
                          <BindProperty>visible</BindProperty>
                        </Connection>
                      </WidgetGroup>
                    </Children>
                  </WidgetGroup><!-- /Channel controls -->

                  <WidgetGroup><!-- Crossfader + Channel1/2 assign switches -->
                    <ObjectName>CrossfaderAndSwitches2Decks</ObjectName>
                    <Layout>horizontal</Layout>
                    <Children>

                      <!-- Channel1 xfader switch:
                          visible if deck is NOT assigned to left side of xFader -->
                      <WidgetGroup>
                        <ObjectName>AlignLeftTop</ObjectName>
                        <Layout>vertical</Layout>
                        <Size>34me,15me</Size>
                        <Children>
                          <WidgetGroup>
                            <Layout>horizontal</Layout>
                            <Size>34f,15me</Size>
                            <Children>
                              <PushButton>
                                <Size>34f,15f</Size>
                                <TooltipId>orientation</TooltipId>
                                <NumberStates>3</NumberStates>
                                <State>
                                  <Number>0</Number>
                                  <Pressed>buttons/btn_orientation_deckLeft_left.svg</Pressed>
                                  <Unpressed>buttons/btn_orientation_deckLeft_left.svg</Unpressed>
                                </State>
                                <State>
                                  <Number>1</Number>
                                  <Pressed>buttons/btn_orientation_deck_master.svg</Pressed>
                                  <Unpressed>buttons/btn_orientation_deck_master.svg</Unpressed>
                                </State>
                                <State>
                                  <Number>2</Number>
                                  <Pressed>buttons/btn_orientation_deckLeft_right.svg</Pressed>
                                  <Unpressed>buttons/btn_orientation_deckLeft_right.svg</Unpressed>
                                </State>
                                <Connection>
                                  <ConfigKey>[Channel1],orientation</ConfigKey>
                                  <ButtonState>LeftButton</ButtonState>
                                </Connection>
                              </PushButton>

                              <WidgetGroup><Size>me,min</Size></WidgetGroup>
                            </Children>
                            <Connection>
                              <ConfigKey>[Channel1],orientation</ConfigKey>
                              <Transform><IsEqual>0</IsEqual><Not/></Transform>
                              <BindProperty>visible</BindProperty>
                            </Connection>
                          </WidgetGroup>

                          <WidgetGroup><Size>min,me</Size></WidgetGroup>
                        </Children>
                        <Connection>
                          <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
                          <Transform><Not/></Transform>
                          <BindProperty>visible</BindProperty>
                        </Connection>
                      </WidgetGroup><!-- /Channel1 xfader switch -->

                      <WidgetGroup>
                        <ObjectName>Crossfader</ObjectName>
                        <Layout>horizontal</Layout>
                        <SizePolicy>min,min</SizePolicy>
                        <Children>
                          <SliderComposed>
                            <TooltipId>crossfader</TooltipId>
                            <Handle>knob_crossfader.png</Handle>
                            <Slider>slider_crossfader.png</Slider>
                            <Horizontal>true</Horizontal>
                            <Connection>
                              <ConfigKey>[Master],crossfader</ConfigKey>
                            </Connection>
                          </SliderComposed>
                        </Children>
                      </WidgetGroup>

                      <!-- Channel2 xfader switch:
                          visible if deck is NOT assigned to right side of xFader -->
                      <WidgetGroup>
                        <ObjectName>AlignRightTop</ObjectName>
                        <Layout>vertical</Layout>
                        <Size>34me,15me</Size>
                        <Children>
                          <WidgetGroup>
                            <Layout>horizontal</Layout>
                            <Size>34f,15me</Size>
                            <Children>
                              <WidgetGroup><Size>me,min</Size></WidgetGroup>

                              <PushButton>
                                <Size>34f,15f</Size>
                                <TooltipId>orientation</TooltipId>
                                <NumberStates>3</NumberStates>
                                <State>
                                  <Number>0</Number>
                                  <Pressed>buttons/btn_orientation_deckRight_left.svg</Pressed>
                                  <Unpressed>buttons/btn_orientation_deckRight_left.svg</Unpressed>
                                </State>
                                <State>
                                  <Number>1</Number>
                                  <Pressed>buttons/btn_orientation_deck_master.svg</Pressed>
                                  <Unpressed>buttons/btn_orientation_deck_master.svg</Unpressed>
                                </State>
                                <State>
                                  <Number>2</Number>
                                  <Pressed>buttons/btn_orientation_deckRight_right.svg</Pressed>
                                  <Unpressed>buttons/btn_orientation_deckRight_right.svg</Unpressed>
                                </State>
                                <Connection>
                                  <ConfigKey>[Channel2],orientation</ConfigKey>
                                  <ButtonState>LeftButton</ButtonState>
                                </Connection>
                              </PushButton>
                            </Children>
                            <Connection>
                              <ConfigKey>[Channel2],orientation</ConfigKey>
                              <Transform><IsEqual>2</IsEqual><Not/></Transform>
                              <BindProperty>visible</BindProperty>
                            </Connection>
                          </WidgetGroup>

                          <WidgetGroup><Size>min,me</Size></WidgetGroup>
                        </Children>
                        <Connection>
                          <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
                          <Transform><Not/></Transform>
                          <BindProperty>visible</BindProperty>
                        </Connection>
                      </WidgetGroup><!-- /Channel2 xfader switch -->

                    </Children>
                  </WidgetGroup><!-- /Crossfader + Channel1/2 assign switches -->

                </Children>
              </WidgetGroup>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Size>2f,min</Size>
              </WidgetGroup>
            </Children>
          </WidgetGroup>

          <WidgetGroup>
            <ObjectName>Border58</ObjectName>
            <SizePolicy>max,min</SizePolicy>
            <Layout>vertical</Layout>
            <Children>
              <WidgetGroup>
                <ObjectName>MasterControls</ObjectName>
                <BackPath>background_tile.png</BackPath>
                <SizePolicy>max,min</SizePolicy>
                <Layout>vertical</Layout>
                <Children>

                  <WidgetGroup><!-- FX buttons 1/2 -->
                    <Layout>horizontal</Layout>
                    <SizePolicy>me,min</SizePolicy>
                    <Children>
                      <PushButton>
                        <Size>35me,22f</Size>
                        <TooltipId>EffectUnit_master_enabled</TooltipId>
                        <ObjectName>FxAssignButton</ObjectName>
                        <NumberStates>2</NumberStates>
                        <State>
                          <Number>0</Number>
                          <Text>FX&#8202;1</Text>
                        </State>
                        <State>
                          <Number>1</Number>
                          <Text>FX&#8202;1</Text>
                        </State>
                        <Connection>
                          <ConfigKey>[EffectRack1_EffectUnit1],group_[Master]_enable</ConfigKey>
                          <ButtonState>LeftButton</ButtonState>
                        </Connection>
                      </PushButton>

                      <PushButton>
                        <Size>35me,22f</Size>
                        <TooltipId>EffectUnit_master_enabled</TooltipId>
                        <ObjectName>FxAssignButton</ObjectName>
                        <NumberStates>2</NumberStates>
                        <State>
                          <Number>0</Number>
                          <Text>FX&#8202;2</Text>
                        </State>
                        <State>
                          <Number>1</Number>
                          <Text>FX&#8202;2</Text>
                        </State>
                        <Connection>
                          <ConfigKey>[EffectRack1_EffectUnit2],group_[Master]_enable</ConfigKey>
                          <ButtonState>LeftButton</ButtonState>
                        </Connection>
                      </PushButton>
                    </Children>
                  </WidgetGroup><!-- /FX buttons 1/2 -->

                  <!-- FX buttons 3/4 --><!-- 
                  <WidgetGroup>
                    <Layout>horizontal</Layout>
                    <SizePolicy>me,min</SizePolicy>
                    <Children>
                      <PushButton>
                        <Size>35me,22f</Size>
                        <TooltipId>EffectUnit_master_enabled</TooltipId>
                        <ObjectName>FxAssignButton</ObjectName>
                        <NumberStates>2</NumberStates>
                        <State>
                          <Number>0</Number>
                          <Text>FX&#8202;3</Text>
                        </State>
                        <State>
                          <Number>1</Number>
                          <Text>FX&#8202;3</Text>
                        </State>
                        <Connection>
                          <ConfigKey>[EffectRack1_EffectUnit3],group_[Master]_enable</ConfigKey>
                          <ButtonState>LeftButton</ButtonState>
                        </Connection>
                      </PushButton>

                      <PushButton>
                        <Size>35me,22f</Size>
                        <TooltipId>EffectUnit_master_enabled</TooltipId>
                        <ObjectName>FxAssignButton</ObjectName>
                        <NumberStates>2</NumberStates>
                        <State>
                          <Number>0</Number>
                          <Text>FX&#8202;4</Text>
                        </State>
                        <State>
                          <Number>1</Number>
                          <Text>FX&#8202;4</Text>
                        </State>
                        <Connection>
                          <ConfigKey>[EffectRack1_EffectUnit4],group_[Master]_enable</ConfigKey>
                          <ButtonState>LeftButton</ButtonState>
                        </Connection>
                      </PushButton>
                    </Children>
                  </WidgetGroup>/FX buttons 3/4 -->

                  <WidgetGroup><Size>0min,1me</Size></WidgetGroup>

                  <WidgetGroup>
                    <Layout>horizontal</Layout>
                    <SizePolicy>min,min</SizePolicy>
                    <Children>
                      <Template src="skin:knob.xml">
                        <SetVariable name="Size">35f,30f</SetVariable>
                        <SetVariable name="TooltipId">master_gain</SetVariable>
                        <SetVariable name="group">[Master]</SetVariable>
                        <SetVariable name="control">gain</SetVariable>
                        <SetVariable name="label">Master</SetVariable>
                      </Template>
                      <Template src="skin:knob.xml">
                        <SetVariable name="Size">35f,30f</SetVariable>
                        <SetVariable name="TooltipId">balance</SetVariable>
                        <SetVariable name="group">[Master]</SetVariable>
                        <SetVariable name="control">balance</SetVariable>
                        <SetVariable name="label">L / R</SetVariable>
                      </Template>
                    </Children>
                  </WidgetGroup>

                  <WidgetGroup><Size>0min,1me</Size></WidgetGroup>

                  <WidgetGroup>
                    <Layout>horizontal</Layout>
                    <SizePolicy>min,min</SizePolicy>
                    <Children>
                      <Template src="skin:knob.xml">
                        <SetVariable name="Size">35f,30f</SetVariable>
                        <SetVariable name="TooltipId">master_gain</SetVariable>
                        <SetVariable name="group">[Booth]</SetVariable>
                        <SetVariable name="control">gain</SetVariable>
                        <SetVariable name="label">Booth</SetVariable>
                      </Template>
                    </Children>
                    <Connection>
                      <ConfigKey>[Master],booth_enabled</ConfigKey>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup>

                  <WidgetGroup><Size>0min,1me</Size></WidgetGroup>

                  <WidgetGroup>
                    <ObjectName>MasterVuMeter4ch</ObjectName>
                    <Layout>vertical</Layout>
                    <SizePolicy>min,me</SizePolicy>
                    <Children>

                      <WidgetGroup><!-- Peak indicator L + R -->
                        <ObjectName>Spacer1e</ObjectName>
                        <Layout>horizontal</Layout>
                        <SizePolicy>max,max</SizePolicy>
                        <Children>
                          <StatusLight>
                            <TooltipId>master_PeakIndicator</TooltipId>
                            <PathStatusLight>buttons/btn_clipping1_over.png</PathStatusLight>
                            <PathBack>buttons/btn_clipping1.png</PathBack>
                            <Connection>
                              <ConfigKey>[Master],PeakIndicatorL</ConfigKey>
                            </Connection>
                          </StatusLight>
                          <StatusLight>
                            <TooltipId>master_PeakIndicator</TooltipId>
                            <PathStatusLight>buttons/btn_clipping1_over.png</PathStatusLight>
                            <PathBack>buttons/btn_clipping1.png</PathBack>
                            <Connection>
                              <ConfigKey>[Master],PeakIndicatorR</ConfigKey>
                            </Connection>
                          </StatusLight>
                        </Children>
                      </WidgetGroup><!-- /Peak indicator L + R -->

                      <WidgetGroup><!-- Level L + R -->
                        <ObjectName>Spacer1e</ObjectName>
                        <Layout>horizontal</Layout>
                        <SizePolicy>max,max</SizePolicy>
                        <Children>
                          <VuMeter>
                            <TooltipId>master_VuMeterL</TooltipId>
                            <PathVu>buttons/btn_volume_display1_over.png</PathVu>
                            <PathBack>buttons/btn_volume_display1.png</PathBack>
                            <Horizontal>false</Horizontal>
                            <PeakHoldSize>5</PeakHoldSize>
                            <PeakHoldTime>500</PeakHoldTime>
                            <PeakFallTime>50</PeakFallTime>
                            <PeakFallStep>2</PeakFallStep>
                            <Connection>
                              <ConfigKey>[Master],VuMeterL</ConfigKey>
                            </Connection>
                          </VuMeter>
                          <VuMeter>
                            <TooltipId>master_VuMeterR</TooltipId>
                            <PathVu>buttons/btn_volume_display1_over.png</PathVu>
                            <PathBack>buttons/btn_volume_display1.png</PathBack>
                            <Horizontal>false</Horizontal>
                            <PeakHoldSize>5</PeakHoldSize>
                            <PeakHoldTime>500</PeakHoldTime>
                            <PeakFallTime>50</PeakFallTime>
                            <PeakFallStep>2</PeakFallStep>
                            <Connection>
                              <ConfigKey>[Master],VuMeterR</ConfigKey>
                            </Connection>
                          </VuMeter>
                        </Children>
                      </WidgetGroup><!-- /Level L + R -->

                      <WidgetGroup><Size>0min,15f</Size></WidgetGroup>
                    </Children>
                    <Connection>
                      <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup>

                  <WidgetGroup>
                    <ObjectName>Spacer58</ObjectName>
                    <Size>0min,1f</Size>
                  </WidgetGroup>

                  <WidgetGroup><Size>0min,1me</Size></WidgetGroup>

                  <WidgetGroup>
                    <Layout>horizontal</Layout>
                    <SizePolicy>min,min</SizePolicy>
                    <Children>
                      <Template src="skin:knob.xml">
                        <SetVariable name="Size">35f,30f</SetVariable>
                        <SetVariable name="TooltipId">headphone_gain</SetVariable>
                        <SetVariable name="group">[Master]</SetVariable>
                        <SetVariable name="control">headGain</SetVariable>
                        <SetVariable name="label">Head</SetVariable>
                      </Template>
                      <Template src="skin:knob.xml">
                        <SetVariable name="Size">35f,30f</SetVariable>
                        <SetVariable name="TooltipId">headMix</SetVariable>
                        <SetVariable name="group">[Master]</SetVariable>
                        <SetVariable name="control">headMix</SetVariable>
                        <SetVariable name="label">Pre/MST</SetVariable>
                      </Template>
                    </Children>
                    <Connection>
                      <ConfigKey>[Master],booth_enabled</ConfigKey>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup>

                  <WidgetGroup>
                    <Layout>vertical</Layout>
                    <SizePolicy>min,min</SizePolicy>
                    <Children>
                      <Template src="skin:knob.xml">
                        <SetVariable name="Size">35f,30f</SetVariable>
                        <SetVariable name="TooltipId">headphone_gain</SetVariable>
                        <SetVariable name="group">[Master]</SetVariable>
                        <SetVariable name="control">headGain</SetVariable>
                        <SetVariable name="label">Head</SetVariable>
                      </Template>
                      <Template src="skin:knob.xml">
                        <SetVariable name="Size">35f,30f</SetVariable>
                        <SetVariable name="TooltipId">headMix</SetVariable>
                        <SetVariable name="group">[Master]</SetVariable>
                        <SetVariable name="control">headMix</SetVariable>
                        <SetVariable name="label">Pre/MST</SetVariable>
                      </Template>
                    </Children>
                    <Connection>
                      <ConfigKey>[Master],booth_enabled</ConfigKey>
                      <Transform><Not/></Transform>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup>

                  <WidgetGroup><Size>0min,0me</Size></WidgetGroup>
                </Children>
              </WidgetGroup>
            </Children>
          </WidgetGroup><!-- /MasterControls -->

        </Children>
        <Connection>
          <ConfigKey persist="true">[Master],show_mixer</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

      <WidgetGroup>
        <ObjectName>NoMixer12</ObjectName>
        <Size>11f,-1me</Size>
        <Layout>horizontal</Layout>
        <Connection>
          <ConfigKey persist="true">[Master],show_mixer</ConfigKey>
          <Transform><Not/></Transform>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

      <WidgetGroup>
        <Layout>horizontal</Layout>
        <Size>11f,-1min</Size>
        <Children>
          <WidgetGroup>
            <ObjectName>NoMixer34</ObjectName>
            <SizePolicy>me,me</SizePolicy>
            <Layout>horizontal</Layout>
            <Children/>
            <Connection>
              <ConfigKey persist="true">[Master],show_mixer</ConfigKey>
              <Transform><Not/></Transform>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>
        </Children>
        <Connection>
          <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
