<Template>
  <SetVariable name="group">[Channel<Variable name="channum"/>]</SetVariable>
  <WidgetGroup>
    <ObjectName>DeckSmall<Variable name="channum" /></ObjectName>
    <Layout>vertical</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>

      <WidgetGroup>
        <Layout>horizontal</Layout>
        <SizePolicy>i,min</SizePolicy>
        <Children>

          <WidgetGroup>
            <Size>45f,46f</Size>
            <Layout>horizontal</Layout>
            <!-- hack/trick: remove the css border (top & left) from SpinnyContainer
                so we can use the Spinny singleton from regular decks :) -->
            <Style>QWidget {border: none};</Style>
            <Children>
              <WidgetGroup><Size>1f,0min</Size></WidgetGroup>
              <SingletonContainer>
                <ObjectName>SpinnyCoverart<Variable name="channum"/></ObjectName>
              </SingletonContainer>
              <WidgetGroup><Size>1f,0min</Size></WidgetGroup>
            </Children>
            <Connection>
              <ConfigKey persist="true">[LateNight],show_spinny_cover</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>

          <WidgetGroup>
            <ObjectName>OverviewBox</ObjectName>
            <SizePolicy>me,min</SizePolicy>
            <MinimumSize>200,46</MinimumSize>
            <MaximumSize>250,46</MaximumSize>
            <Layout>horizontal</Layout>
            <Children>
              <SingletonContainer>
                <ObjectName>DeckOverview<Variable name="channum"/></ObjectName>
              </SingletonContainer>
            </Children>
          </WidgetGroup>

          <WidgetGroup><!-- DeckSmall_TitlePlayPosKeyBPM -->
            <Layout>vertical</Layout>
            <Size>200min,46f</Size>
            <Children>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Size>200min,23f</Size>
                <Children>
                  <TrackProperty>
                    <TooltipId>track_title</TooltipId>
                    <ObjectName>TitleTextSmall</ObjectName>
                    <Size>100me,23f</Size>
                    <Property>title</Property>
                    <Alignment>left</Alignment>
                    <Elide>right</Elide>
                    <Channel><Variable name="channum"/></Channel>
                  </TrackProperty>
                  
                  <NumberPos>
                    <TooltipId>track_time</TooltipId>
                    <ObjectName>PlayPositionTextSmall</ObjectName>
                    <SizePolicy>min,f</SizePolicy>
                    <MinimumSize>,23</MinimumSize>
                    <Alignment>center</Alignment>
                    <Channel><Variable name="channum"/></Channel>
                    <Connection>
                      <ConfigKey><Variable name="group"/>,playposition</ConfigKey>
                    </Connection>
                  </NumberPos>
                </Children>
              </WidgetGroup><!-- Title / PlayPos -->

              <WidgetGroup><!-- Artist / Key / BPM -->
                <Layout>horizontal</Layout>
                <Size>200min,22f</Size>
                <Children>
                  <TrackProperty>
                    <TooltipId>track_title</TooltipId>
                    <ObjectName>ArtistTextSmall</ObjectName>
                    <Size>96me,22f</Size>
                    <Property>artist</Property>
                    <Alignment>left</Alignment>
                    <Elide>right</Elide>
                    <Channel><Variable name="channum"/></Channel>
                  </TrackProperty>

                  <Key>
                    <TooltipId>visual_key</TooltipId>
                    <ObjectName>KeyTextSmall</ObjectName>
                    <Channel><Variable name="channum"/></Channel>
                    <Size>44min,22f</Size>
                    <Alignment>center</Alignment>
                    <Elide>right</Elide>
                    <Connection>
                      <ConfigKey><Variable name="group"/>,visual_key</ConfigKey>
                    </Connection>
                  </Key>

                  <NumberBpm>
                    <ObjectName>BpmTextSmall</ObjectName>
                    <TooltipId>visual_bpm</TooltipId>
                    <Size>60f,22f</Size>
                    <Alignment>center</Alignment>
                    <Channel><Variable name="channum" /></Channel>
                    <NumberOfDigits>2</NumberOfDigits>
                    <Connection>
                      <ConfigKey><Variable name="group"/>,visual_bpm</ConfigKey>
                    </Connection>
                  </NumberBpm>

                </Children>
              </WidgetGroup><!-- Artist / Key / BPM -->

            </Children>
          </WidgetGroup><!-- DeckSmall_TitlePlayPosKeyBPM -->

          <WidgetGroup>
            <ObjectName>PlayContainerSmall</ObjectName>
            <Layout>horizontal</Layout>
            <Children>
              <PushButton>
                <TooltipId>play_cue_set</TooltipId>
                <ObjectName>PlayButtonDeckSmall</ObjectName>
                <Size>34f,34f</Size>
                <NumberStates>2</NumberStates>
                <RightClickIsPushButton>true</RightClickIsPushButton>
                <State>
                  <Number>0</Number>
                  <Unpressed scalemode="STRETCH">skin:/buttons_<Variable name="scheme"/>/btn_<Variable name="TopRegion_btn_type"/>_square_big.svg</Unpressed>
                  <Pressed scalemode="STRETCH">skin:/buttons_<Variable name="scheme"/>/btn_<Variable name="TopRegion_btn_type"/>_square_big_active.svg</Pressed>
                </State>
                <State>
                  <Number>1</Number>
                  <Unpressed scalemode="STRETCH">skin:/buttons_<Variable name="scheme"/>/btn_<Variable name="TopRegion_btn_type"/>_square_big_active.svg</Unpressed>
                  <Pressed scalemode="STRETCH">skin:/buttons_<Variable name="scheme"/>/btn_<Variable name="TopRegion_btn_type"/>_square_big_active.svg</Pressed>
                </State>
                <Connection>
                  <ConfigKey><Variable name="group"/>,cue_gotoandplay</ConfigKey>
                  <ButtonState>LeftButton</ButtonState>
                </Connection>
                <Connection>
                  <ConfigKey><Variable name="group"/>,cue_default</ConfigKey>
                  <ButtonState>RightButton</ButtonState>
                </Connection>
                <Connection>
                  <ConfigKey><Variable name="group"/>,play_indicator</ConfigKey>
                  <ConnectValueFromWidget>false</ConnectValueFromWidget>
                </Connection>
                <Connection>
                  <ConfigKey><Variable name="group"/>,play</ConfigKey>
                  <BindProperty>highlight</BindProperty>
                </Connection>
              </PushButton>
            </Children>
          </WidgetGroup><!-- PlayContainerSmall -->

        </Children>
      </WidgetGroup>
    </Children>
  </WidgetGroup><!-- DeckSmall -->
</Template>
