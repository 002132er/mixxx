<Template>
  <WidgetGroup>
    <Layout>vertical</Layout>
    <SizePolicy>i,min</SizePolicy>
    <Children>

      <!-- EffectUnit 2 -->
      <WidgetGroup>
        <Layout>vertical</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <Template src="skin:/fx/unit.xml">
            <SetVariable name="FxUnit">2</SetVariable>
          </Template>

          <WidgetGroup>
            <ObjectName>FxRackFillerR</ObjectName>
            <SizePolicy>min,me</SizePolicy>
            <Connection>
              <ConfigKey>[EffectRack1_EffectUnit1],show_parameters</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>
        </Children>
      </WidgetGroup>

      <!-- EffectUnit 4 -->
      <WidgetGroup>
        <Layout>vertical</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <Template src="skin:/fx/unit.xml">
            <SetVariable name="FxUnit">4</SetVariable>
          </Template>

          <WidgetGroup>
            <ObjectName>FxRackFillerR</ObjectName>
            <SizePolicy>min,me</SizePolicy>
            <Connection>
              <ConfigKey>[EffectRack1_EffectUnit3],show_parameters</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>
        </Children>
        <Connection>
          <ConfigKey>[Skin],show_4effectunits</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
