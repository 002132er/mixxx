            <State>
              <Number>1</Number>
              <Pressed>buttons/btn_hotcue2_1_overdown.png</Pressed>
              <Unpressed>buttons/btn_hotcue2_1_over.png</Unpressed>
            </State>
            <Connection>
              <ConfigKey>[Channel<Variable name="channum" />],hotcue_1_activate</ConfigKey>
              <ButtonState>LeftButton</ButtonState>
            </Connection>
            <Connection>
              <ConfigKey>[Channel<Variable name="channum" />],hotcue_1_clear</ConfigKey>
