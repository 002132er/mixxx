<Template>
  <WidgetGroup>
    <ObjectName>DeckRowOne</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>
      <WidgetGroup>
        <Layout>vertical</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <WidgetGroup><!-- Key adjust -->
            <Layout>horizontal</Layout>
            <SizePolicy>min,min</SizePolicy>
            <Children>
              <PushButton>
                <Size>16f,16f</Size>
                <ObjectName>PitchTweakButton</ObjectName>
                <NumberStates>1</NumberStates>
                <State>
                  <Number>0</Number>
                  <Unpressed>buttons/btn_prev.png</Unpressed>
                  <Pressed>buttons/btn_prev_down.png</Pressed>
                </State>
                <Connection>
                  <ConfigKey persist="true"><Variable name="group"/>,pitch_down</ConfigKey>
                  <ButtonState>LeftButton</ButtonState>
                </Connection>
                <Connection>
                  <ConfigKey persist="true"><Variable name="group"/>,pitch_down_small</ConfigKey>
                  <ButtonState>RightButton</ButtonState>
                </Connection>
              </PushButton>

              <PushButton>
                <Size>28f,16f</Size>
                <ObjectName>PitchTweakButton</ObjectName>
                <NumberStates>2</NumberStates>
                <State>
                  <Number>0</Number>
                  <Text>KEY</Text>
                </State>
                <State>
                  <Number>1</Number>
                  <Text>KEY</Text>
                </State>
                <Connection>
                  <ConfigKey persist="true"><Variable name="group"/>,pitch_adjust_set_default</ConfigKey>
                  <ButtonState>LeftButton</ButtonState>
                </Connection>
                <Connection>
                  <ConfigKey persist="true"><Variable name="group"/>,pitch_adjust_set_default</ConfigKey>
                </Connection>
                <Connection>
                  <ConfigKey persist="true"><Variable name="group"/>,reset_key</ConfigKey>
                  <ButtonState>RightButton</ButtonState>
                </Connection>
              </PushButton>

              <Key>
                <ObjectName>TextColor<Variable name="channum" /></ObjectName>
                <Style>QLabel { qproperty-alignment: 'AlignCenter';
                    font: bold 13px/16px Lucida Grande, Lucida Sans
                    Unicode, Segoe UI, Arial, Verdana, sans-serif;
                    background-color: transparent; padding: 0px; margin: 0px;}
                </Style>
                <Group><Variable name="group"/></Group>
                <Size>40f,17f</Size>
                <Connection>
                  <ConfigKey><Variable name="group"/>,visual_key</ConfigKey>
                </Connection>
              </Key>

              <PushButton>
                <Size>16f,16f</Size>
                <ObjectName>PitchTweakButton</ObjectName>
                <NumberStates>1</NumberStates>
                <State>
                  <Number>0</Number>
                  <Unpressed>buttons/btn_next.png</Unpressed>
                  <Pressed>buttons/btn_next_down.png</Pressed>
                </State>
                <Connection>
                  <ConfigKey persist="true"><Variable name="group"/>,pitch_up</ConfigKey>
                  <ButtonState>LeftButton</ButtonState>
                </Connection>
                <Connection>
                  <ConfigKey persist="true"><Variable name="group"/>,pitch_up_small</ConfigKey>
                  <ButtonState>RightButton</ButtonState>
                </Connection>
              </PushButton>
            </Children>
          </WidgetGroup><!-- /Key adjust -->

        </Children>
      </WidgetGroup>

      <WidgetGroup>  <!-- spacer -->
        <Layout>horizontal</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children></Children>
      </WidgetGroup>

      <Template src="skin:vinyl_controls.xml"/>

    </Children>
  </WidgetGroup>
</Template>
