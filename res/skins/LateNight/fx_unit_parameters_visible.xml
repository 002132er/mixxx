<!DOCTYPE template>
<!--
  Description:
    An effect unit widget.
  Variables:
    group: The group for the controls.
    FxRack
    FxUnit
-->
<Template>
  <SetVariable name="FxRack_FxUnit">[EffectRack<Variable name="FxRack"/>_EffectUnit<Variable name="FxUnit"/>]</SetVariable>

  <WidgetGroup>
    <ObjectName>FxUnit<Variable name="FxUnit"/></ObjectName>
    <Layout>vertical</Layout>
    <Size>635me,170min</Size>
    <Children>

      <WidgetGroup><!-- Fx Parameters -->
        <SizePolicy>me,me</SizePolicy>
        <Layout>horizontal</Layout>
        <Children>
          <WidgetGroup>
            <ObjectName>FxRows</ObjectName>
            <SizePolicy>me,me</SizePolicy>
            <Layout>vertical</Layout>
            <Children>
              <Template src="skin:fx_slot.xml">
                <SetVariable name="FxNum">1</SetVariable>
              </Template>

              <Template src="skin:fx_slot.xml">
                <SetVariable name="FxNum">2</SetVariable>
              </Template>

              <Template src="skin:fx_slot.xml">
                <SetVariable name="FxNum">3</SetVariable>
              </Template>
            </Children>
          </WidgetGroup>

          <WidgetGroup><!-- Expand/Collapse + Mix/Super + Pfl -->
            <ObjectName>FxUnitControls</ObjectName>
            <Layout>vertical</Layout>
            <SizePolicy>max,min</SizePolicy>
            <Children>

              <!-- Fx label + expand | mix mode + Pfl -->
              <WidgetGroup>
                <Layout>vertical</Layout>
                <SizePolicy>max,min</SizePolicy>
                <Children>

                  <!-- Fx Pfl + Expand_Collapsed -->
                  <WidgetGroup>
                    <ObjectName></ObjectName>
                    <SizePolicy>min,min</SizePolicy>
                    <Layout>horizontal</Layout>
                    <Children>
                      <Template src="skin:button_2state.xml">
                        <SetVariable name="TooltipId">pfl</SetVariable>
                        <SetVariable name="ObjectName">PflButton</SetVariable>
                        <SetVariable name="Size">26f,26f</SetVariable>
                        <SetVariable name="btn_format">square</SetVariable>
                        <SetVariable name="ConfigKey"><Variable name="FxRack_FxUnit"/>,group_[Headphone]_enable</SetVariable>
                      </Template>
                      <PushButton>
                        <TooltipId>EffectUnit_show_parameters</TooltipId>
                        <ObjectName>FxExpandCollapseButton</ObjectName>
                        <Size>26f,26f</Size>
                        <NumberStates>2</NumberStates>
                        <State>
                          <Number>0</Number>
                          <Unpressed scalemode="STRETCH">skin:/buttons/btn_<Variable name="btn_type"/>_square.svg</Unpressed>
                          <Pressed scalemode="STRETCH">skin:/buttons/btn_<Variable name="btn_type"/>_square_pressed.svg</Pressed>
                        </State>
                        <State>
                          <Number>1</Number>
                          <Unpressed scalemode="STRETCH">skin:/buttons/btn_<Variable name="btn_type"/>_square.svg</Unpressed>
                          <Pressed scalemode="STRETCH">skin:/buttons/btn_<Variable name="btn_type"/>_square_pressed.svg</Pressed>
                        </State>
                        <Connection>
                          <ConfigKey><Variable name="FxRack_FxUnit"/>,show_parameters</ConfigKey>
                          <ButtonState>LeftButton</ButtonState>
                        </Connection>
                      </PushButton>
                    </Children>
                  </WidgetGroup>

                  <!-- Label -->
                  <Label>
                    <ObjectName>FxUnitLabel</ObjectName>
                    <MinimumSize>52,20</MinimumSize>
                    <MaximumSize>52,24</MaximumSize>
                    <SizePolicy>f,me</SizePolicy>
                    <Text>FX&#8202;<Variable name="FxUnit"/></Text>
                    <Alignment>center</Alignment>
                  </Label>

                  <WidgetGroup>
                    <ObjectName></ObjectName>
                    <SizePolicy>min,min</SizePolicy>
                    <Layout>horizontal</Layout>
                    <Children>
                      <PushButton>
                        <TooltipId>EffectUnit_mix_mode</TooltipId>
                        <ObjectName>MixModeButton</ObjectName>
                        <Size>39f,24f</Size>
                        <NumberStates>2</NumberStates>
                        <RightClickIsPushButton>false</RightClickIsPushButton>
                        <State>
                          <Number>0</Number>
                          <Unpressed scalemode="STRETCH">skin:/buttons/btn_<Variable name="btn_type"/>_medium.svg</Unpressed>
                          <Pressed scalemode="STRETCH">skin:/buttons/btn_<Variable name="btn_type"/>_medium_pressed.svg</Pressed>
                        </State>
                        <State>
                          <Number>1</Number>
                          <Unpressed scalemode="STRETCH">skin:/buttons/btn_<Variable name="btn_type"/>_medium.svg</Unpressed>
                          <Pressed scalemode="STRETCH">skin:/buttons/btn_<Variable name="btn_type"/>_medium_pressed.svg</Pressed>
                        </State>
                        <Connection>
                          <ConfigKey><Variable name="FxRack_FxUnit"/>,mix_mode</ConfigKey>
                          <ButtonState>LeftButton</ButtonState>
                        </Connection>
                      </PushButton>
                    </Children>
                  </WidgetGroup>
                  <WidgetGroup><Size>3f,</Size></WidgetGroup>
                </Children>
              </WidgetGroup><!-- Fx label + expand | mix mode + Pfl -->

              <WidgetGroup>
                <MinimumSize>,0</MinimumSize>
                <MaximumSize>,5</MaximumSize>
                <SizePolicy>min,me</SizePolicy>
              </WidgetGroup>

              <SingletonContainer>
                <ObjectName>FxUnit<Variable name="FxUnit"/>_DryWetKnob</ObjectName>
              </SingletonContainer>

              <WidgetGroup><!-- Super knob, optional -->
                <Layout>vertical</Layout>
                <SizePolicy>min,me</SizePolicy>
                <Children>
                  <WidgetGroup><Size>,1f</Size></WidgetGroup>
                  <SingletonContainer>
                    <ObjectName>FxUnit<Variable name="FxUnit"/>_SuperKnob</ObjectName>
                  </SingletonContainer>
                </Children>
                <Connection>
                  <ConfigKey persist="true">[Skin],show_superknobs</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>

              <WidgetGroup><Size>,0me</Size></WidgetGroup>
            </Children>
          </WidgetGroup><!-- /Expand/Collapse + Mix/Super + Pfl -->
        </Children>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
