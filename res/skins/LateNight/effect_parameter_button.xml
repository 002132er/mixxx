<!DOCTYPE template>
<!--
  Description:
    An effect parameter knob.
  Variables:
    EffectRack: the rack
    EffectUnit: the unit
    Effect: the effect
    EffectParameter: the parameter
-->
<Template>
  <SetVariable name="FxButtonNumber">[EffectRack1_EffectUnit<Variable name="FxUnit"/>_Effect<Variable name="FxNum"/>]</SetVariable>
  <WidgetGroup>
    <Layout>vertical</Layout>
    <Size>60f,42f</Size>
    <Children>
      <WidgetGroup>
        <ObjectName>EffectButton</ObjectName>
        <Layout>horizontal</Layout>
        <Size>0me,25f</Size>
        <Children>
          <PushButton>
            <TooltipId><Variable name="TooltipId"/></TooltipId>
            <Size>40f,20f</Size>
            <NumberStates>2</NumberStates>
            <RightClickIsPushButton>true</RightClickIsPushButton>
            <State>
              <Number>0</Number>
              <Pressed>skin:/buttons/btn_fxButton_down.png</Pressed>
              <Unpressed>skin:/buttons/btn_fxButton.png</Unpressed>
            </State>
            <State>
              <Number>1</Number>
              <Pressed>skin:/buttons/btn_fxButton_overdown.png</Pressed>
              <Unpressed>skin:/buttons/btn_fxButton_over.png</Unpressed>
            </State>
            <Connection>
              <ConfigKey><Variable name="FxButtonNumber"/>,button_parameter<Variable name="FxParameter"/></ConfigKey>
            </Connection>
          </PushButton>
	     </Children>
      </WidgetGroup>

      <EffectButtonParameterName>
        <Size>1min,14f</Size>
        <ObjectName>KnobLabel</ObjectName>
        <EffectRack><Variable name="FxRack"/></EffectRack>
        <EffectUnit><Variable name="FxUnit"/></EffectUnit>
        <Effect><Variable name="FxNum"/></Effect>
        <EffectButtonParameter><Variable name="FxParameter"/></EffectButtonParameter>
        <Alignment>center</Alignment>
      </EffectButtonParameterName>

    </Children>
    <Connection>
      <ConfigKey><Variable name="FxButtonNumber"/>,button_parameter<Variable name="FxParameter"/>_loaded</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
</Template>
