<!DOCTYPE template>
<!--
  Description:
    An effect parameter knob.
  Variables:
    EffectRack: the rack
    EffectUnit: the unit
    Effect: the effect
    EffectParameter: the parameter
-->
<Template>
  <WidgetGroup>
    <Layout>vertical</Layout>
    <Size>60f,42f</Size>
    <Children>
      <WidgetGroup>
        <ObjectName>EffectButton</ObjectName>
        <Layout>horizontal</Layout>
        <Size>0me,25f</Size>
        <Children>
          <PushButton>
            <TooltipId><Variable name="TooltipId"/></TooltipId>
            <ObjectName><Variable name="ObjectName"/></ObjectName>
            <Size>40f,20f</Size>
            <NumberStates>2</NumberStates>
            <RightClickIsPushButton>true</RightClickIsPushButton>
            <State>
              <Number>0</Number>
              <Text><Variable name="state_0_text"/></Text>
              <Alignment>center</Alignment>
              <Pressed>skin:/buttons/btn_fxButton_down.png</Pressed>
              <Unpressed>skin:/buttons/btn_fxButton.png</Unpressed>
            </State>
            <State>
              <Number>1</Number>
              <Text><Variable name="state_1_text"/></Text>
              <Alignment><Variable name="Align"/></Alignment>
              <Pressed>skin:/buttons/btn_fxButton_overdown.png</Pressed>
              <Unpressed>skin:/buttons/btn_fxButton_over.png</Unpressed>
            </State>
            <Connection>
              <ConfigKey>[EffectRack1_EffectUnit<Variable name="EffectUnit"/>_Effect<Variable name="Effect"/>],button_parameter<Variable name="EffectParameter"/></ConfigKey>
            </Connection>
          </PushButton>
	     </Children>
      </WidgetGroup>

      <EffectButtonParameterName>
        <Size>1min,14f</Size>
        <ObjectName>KnobLabel</ObjectName>
        <EffectRack><Variable name="EffectRack"/></EffectRack>
        <EffectUnit><Variable name="EffectUnit"/></EffectUnit>
        <Effect><Variable name="Effect"/></Effect>
        <EffectButtonParameter><Variable name="EffectParameter"/></EffectButtonParameter>
        <Alignment>center</Alignment>
      </EffectButtonParameterName>

    </Children>
    <Connection>
      <ConfigKey>[EffectRack1_EffectUnit<Variable name="EffectUnit"/>_Effect<Variable name="Effect"/>],button_parameter<Variable name="EffectParameter"/>_loaded</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
</Template>
