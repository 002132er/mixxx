<Template>
  <SetVariable name="BtnType"><Variable name="SubRegion_BtnType"/></SetVariable>

  <Template src="skin:/samplers/singletons.xml"/>

  <WidgetGroup>
    <Layout>horizontal</Layout>
    <SizePolicy>me,max</SizePolicy>
    <Children>

      <WidgetGroup><Size>0min,0min</Size></WidgetGroup>

      <WidgetGroup>
        <Layout>horizontal</Layout>
        <Children>
          <WidgetStack currentpage="[LateNight],sampler_rows" persist="true">
            <Children>

              <!--4 Samplers -->
              <Template trigger="[LateNight],show_4samplers" src="skin:/samplers/samplers_4decks.xml"/>

              <!--8 Samplers -->
              <Template trigger="[LateNight],show_8samplers" src="skin:/samplers/samplers_8decks.xml"/>

              <!--16 Samplers -->
              <WidgetGroup trigger="[LateNight],show_16samplers">
                <Layout>vertical</Layout>
                <Children>
                  <Template src="skin:/samplers/samplers_8decks.xml"/>
                  <Template src="skin:/samplers/samplers_16decks.xml"/>
                </Children>
              </WidgetGroup>

            </Children>
          </WidgetStack>
        </Children>
      </WidgetGroup>

      <WidgetGroup><Size>0min,0min</Size></WidgetGroup>

    </Children>
    <Connection>
      <ConfigKey>[Samplers],show_samplers</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
</Template>
