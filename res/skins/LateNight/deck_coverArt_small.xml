<Template>
  <WidgetGroup>
    <Layout>vertical</Layout>
    <SizePolicy>max,min</SizePolicy>
    <Children>

      <WidgetGroup>
        <ObjectName>SpinnyContainer</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>f,me</SizePolicy>
        <Children>
          <CoverArt>
            <TooltipId>coverart</TooltipId>
            <Size><Variable name="Size"/></Size>
            <Group><Variable name="group"/></Group>
            <DefaultCover>style/cover_default.svg</DefaultCover>
          </CoverArt>
        </Children>
        <Connection>
          <ConfigKey>[Skin],show_spinnies</ConfigKey>
          <Transform><Not/></Transform>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

    </Children>
    <Connection>
      <ConfigKey persist="true">[Skin],show_coverart</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
</Template>
