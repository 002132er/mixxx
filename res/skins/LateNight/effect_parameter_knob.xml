<!DOCTYPE template>
<!--
  Description:
    An effect parameter knob.
  Variables:
    EffectRack: the rack
    EffectUnit: the unit
    Effect: the effect
    EffectParameter: the parameter
-->
<Template>
  <WidgetGroup>
    <Layout>vertical</Layout>
    <Size>60f,42f</Size>
    <Children>
      <WidgetGroup>
        <ObjectName>EffectKnob</ObjectName>
        <Layout>horizontal</Layout>
        <Size>0me,25f</Size>
        <Children>
          <KnobComposed>
            <TooltipId><Variable name="tooltip"/></TooltipId>
            <Size>25f,25f</Size>
            <Knob>knob_sm_indicator.svg</Knob>
            <BackPath>knob_sm_bg.svg</BackPath>
            <MinAngle>-135</MinAngle>
            <MaxAngle>135</MaxAngle>
            <Connection>
              <ConfigKey>[EffectRack1_EffectUnit<Variable name="EffectUnit"/>_Effect<Variable name="Effect"/>],parameter<Variable name="EffectParameter"/></ConfigKey>
            </Connection>
          </KnobComposed>
	     </Children>
      </WidgetGroup>
      <EffectParameterName>
        <Size>1min,14f</Size>
        <ObjectName>KnobLabel</ObjectName>
        <EffectRack><Variable name="EffectRack"/></EffectRack>
        <EffectUnit><Variable name="EffectUnit"/></EffectUnit>
        <Effect><Variable name="Effect"/></Effect>
        <EffectParameter><Variable name="EffectParameter"/></EffectParameter>
        <Alignment>center</Alignment>
      </EffectParameterName>
    </Children>
    <Connection>
      <ConfigKey>[EffectRack1_EffectUnit<Variable name="EffectUnit"/>_Effect<Variable name="Effect"/>],parameter<Variable name="EffectParameter"/>_loaded</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
</Template>
