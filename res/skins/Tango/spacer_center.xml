<!--
Description:
  Shows Logo in normal mode if 4 decks are enabled.
-->
<Template>
  <WidgetStack currentpage="[Tango],mixer_stack" persist="true">
    <Children>

      <WidgetGroup trigger="[Tango],channel_mixer" on_hide_select="1" persist="true"><!-- with mixer and Master VU -->
        <Layout>vertical</Layout>
        <Size>18f,0f</Size>
      </WidgetGroup>

      <WidgetGroup><!-- without mixer, levels meters always visible -->
        <Layout>vertical</Layout>
        <SizePolicy>min,f</SizePolicy>
        <Children>
          <WidgetGroup>
            <Layout>vertical</Layout>
            <Size>18f,0f</Size>
            <Connection>
              <ConfigKey>[Tango],vumeter</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>
        </Children>
      </WidgetGroup>

    </Children>
  </WidgetStack>
</Template>
