<!--
Description:
  Size-aware container for sampler decks and Library.
Modes:
-->
<Template>
  <SizeAwareStack>
    <Children>

      <WidgetGroup><!-- 0  show skin controls ...somewhere else -->
        <Layout>vertical</Layout>
        <SizePolicy>me,max</SizePolicy>
        <MinimumSize>1,1</MinimumSize>
        <MaximumSize>1127,1</MaximumSize>
        <Children>
          <WidgetStack currentpage="[Tango],netboo_normal_size0" persist="true">
            <Children>
              <WidgetGroup trigger="[Tango],netbook_mode" persist="true">
                <Size>2f,2f</Size>
                <Children>
                </Children>
                <Connection>
                  <ConfigKey>[Tango],netbook_mode</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>
              <WidgetGroup trigger="[Tango],normal_mode" persist="true">
                <Size>2f,2f</Size>
                <Children>
                </Children>
                <Connection>
                  <ConfigKey>[Tango],normal_mode</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>
            </Children>
          </WidgetStack>
        </Children>
      </WidgetGroup>

      <WidgetGroup><!-- 1  show skin controls in the top center  -->
        <Layout>vertical</Layout>
        <SizePolicy>me,me</SizePolicy>
        <MinimumSize>1128,-1</MinimumSize>
        <MaximumSize>-1,-1</MaximumSize>
        <Children>
          <WidgetStack currentpage="[Tango],netboo_normal_size1" persist="true">
            <Children>
              <WidgetGroup trigger="[Tango],netbook_mode" persist="true">
                <Size>2f,2f</Size>
                <Children>
                </Children>
                <Connection>
                  <ConfigKey>[Tango],netbook_mode</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>
              <WidgetGroup trigger="[Tango],normal_mode" persist="true">
                <Size>2f,2f</Size>
                <Children>
                </Children>
                <Connection>
                  <ConfigKey>[Tango],normal_mode</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>
            </Children>
          </WidgetStack>
        </Children>
      </WidgetGroup>

    </Children>
  </SizeAwareStack>
</Template>
