<Template>
  <WidgetGroup><!-- Loop/Jump 2.0 -->
    <ObjectName>DeckLoopBeatjump</ObjectName>
    <SizePolicy>min,min</SizePolicy>
    <Layout>horizontal</Layout>
    <Children>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>0me,1min</Size></WidgetGroup>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>0me,1min</Size></WidgetGroup>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>0me,1min</Size></WidgetGroup>
      <Template src="skin:loop_move_sizes.xml"/>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>1me,1min</Size></WidgetGroup>
      <Template src="skin:loop_scale.xml"/>
        <WidgetGroup><Size>1f,1min</Size></WidgetGroup>
      <Template src="skin:loop_sizes.xml"/>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>1me,1min</Size></WidgetGroup>
      <Template src="skin:loop_basics.xml"/>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>1me,1min</Size></WidgetGroup>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>0me,1min</Size></WidgetGroup>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>0me,1min</Size></WidgetGroup>
      <Template src="skin:beatjump_sizes.xml"/>
    </Children>
    <Connection>
      <ConfigKey persist="true">[Tango],loop_beatjump_controls</ConfigKey>
      <Transform><IsEqual>1</IsEqual></Transform>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup><!-- /Loop/Jump 2.0 -->

  <WidgetGroup><!-- Loop/Jump 2.1 compact -->
    <ObjectName>DeckLoopBeatjump</ObjectName>
    <SizePolicy>min,min</SizePolicy>
    <Layout>horizontal</Layout>
    <Children>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>1me,1min</Size></WidgetGroup>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>0me,1min</Size></WidgetGroup>
      <Template src="skin:loop_basics_2.1_compact.xml"/>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>1me,1min</Size></WidgetGroup>
      <Template src="skin:beatjump_2.1_compact_left.xml"/>
    </Children>
    <Connection>
      <ConfigKey persist="true">[Tango],loop_beatjump_controls</ConfigKey>
      <Transform><IsEqual>2</IsEqual></Transform>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup><!-- /Loop/Jump 2.1 compact -->

  <WidgetGroup><!-- Loop/Jump 2.1+ advanced -->
    <ObjectName>DeckLoopBeatjump</ObjectName>
    <SizePolicy>min,min</SizePolicy>
    <Layout>horizontal</Layout>
    <Children>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>0me,1min</Size></WidgetGroup>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>0me,1min</Size></WidgetGroup>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>0me,1min</Size></WidgetGroup>
      <Template src="skin:loop_sizes.xml"/>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>1me,1min</Size></WidgetGroup>
      <Template src="skin:loop_basics_2.1.xml"/>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>1me,1min</Size></WidgetGroup>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>0me,1min</Size></WidgetGroup>
        <WidgetGroup><ObjectName>Spacer1e</ObjectName><Size>0me,1min</Size></WidgetGroup>
      <Template src="skin:beatjump_2.1.xml"/>
    </Children>
    <Connection>
      <ConfigKey persist="true">[Tango],loop_beatjump_controls</ConfigKey>
      <Transform><IsEqual>3</IsEqual></Transform>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup><!-- /Loop/Jump 2.1+ advanced -->
</Template>
