<!--
Description:
	An effect parameter button.
	Stacked layout of invisible button, parameter name
	and button display underneath.
Variables:
	EffectRack: the rack
	EffectUnit: the unit
	Effect: the effect
	EffectButtonParameter: the parameter
	
-->
<Template>
  <WidgetGroup>
    <ObjectName>B</ObjectName>
    <SizePolicy>me,min</SizePolicy>
    <Layout>vertical</Layout>
    <Children>

      <WidgetGroup><!-- EffectUnits 1 & 2 -->
        <ObjectName>EffectUnits12</ObjectName>
        <SizePolicy>me,max</SizePolicy>
        <Layout>horizontal</Layout>
        <Children>

          <WidgetGroup><!-- EffectUnit 1 -->
            <ObjectName>D</ObjectName>
            <SizePolicy>me,min</SizePolicy>
            <Layout>horizontal</Layout>
            <Children>

              <WidgetStack currentpage="[Tango],fx_units_12_miniMAXI_stack" persist="true">
                <SizePolicy>min,max</SizePolicy>
                <Children>

                  <WidgetGroup trigger="[Tango],fx_units_12_miniMAXI" persist="true" on-hide-select="1">
                    <ObjectName>E</ObjectName>
                    <Layout>vertical</Layout>
                    <SizePolicy>min,max</SizePolicy>
                    <Children>
                      <Template src="skin:fx_unit_left.xml">
                        <SetVariable name="EffectRack">1</SetVariable>
                        <SetVariable name="EffectUnit">1</SetVariable>
                      </Template>
                    </Children>
                    <Connection>
                      <ConfigKey persist="true">[Tango],fx_units_12_miniMAXI</ConfigKey>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup>

                  <Template src="skin:fx_unit_left_mini.xml" on-hide-select="0">
                    <SetVariable name="EffectRack">1</SetVariable>
                    <SetVariable name="EffectUnit">1</SetVariable>
                  </Template>

                </Children>
              </WidgetStack>

              <WidgetGroup><!-- Spacer to keep Deck & FX unit aligned, incl. mini/MAXI toggler -->
                <ObjectName>AlignTopLeft</ObjectName>
                <Size>56f,1min</Size>
                <Layout>vertical</Layout>
                <Children>

                  <WidgetGroup><Size>1min,3f</Size><Children/></WidgetGroup>

                  <Template src="skin:button_2state_persist.xml">
                    <SetVariable name="ObjectName">MiniMaxiButton</SetVariable>
                    <SetVariable name="Size">22f,17f</SetVariable>
                    <SetVariable name="ConfigKeyPerm">[Tango],fx_units_12_miniMAXI</SetVariable>
                  </Template>

                </Children>
                <Connection>
                  <ConfigKey>[Tango],normal_mode</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup><!-- Spacer to keep Deck & FX unit aligned, incl. mini/MAXI toggler -->

            </Children>
          </WidgetGroup><!-- /EffectUnit 1 -->

          <WidgetGroup><!-- Spacers for normal width -->
            <Layout>horizontal</Layout>
            <SizePolicy>min,min</SizePolicy>
            <Children>
              <WidgetGroup> <!-- Spacer to keep Deck & FX unit aligned without Pitch fader-->
                <Size>106f,1min</Size>
                <Children/>
                <Connection>
                  <ConfigKey>[Tango],pitch_fader</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>

              <WidgetGroup><!-- VU Meter spacer when Channel Mixer is hidden -->
                <Layout>vertical</Layout>
                <SizePolicy>min,min</SizePolicy>
                <Children>
                  <WidgetGroup>
                    <Layout>vertical</Layout>
                    <Size>22f,1min</Size>
                    <Children>
                    </Children>
                    <Connection>
                      <ConfigKey>[Tango],vumeter</ConfigKey>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup>
                </Children>
                <Connection>
                  <ConfigKey>[Tango],channel_mixer</ConfigKey>
                  <BindProperty>visible</BindProperty>
                  <Transform><Not/></Transform>
                </Connection>
              </WidgetGroup><!-- /VU Meter spacer when Channel Mixer is hidden -->
            </Children>
            <Connection>
              <ConfigKey>[Tango],normal_mode</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup><!-- /Spacers for normal width -->

          <WidgetGroup><!-- mini/MAXI toggler for netbook mode -->
            <ObjectName>AlignTopLeft</ObjectName>
            <Size>22f,1min</Size>
            <Layout>vertical</Layout>
            <Children>
              <WidgetGroup><Size>1min,3f</Size><Children/></WidgetGroup>
              <Template src="skin:button_2state_persist.xml">
                <SetVariable name="ObjectName">MiniMaxiButton</SetVariable>
                <SetVariable name="Size">22f,17f</SetVariable>
                <SetVariable name="ConfigKeyPerm">[Tango],fx_units_12_miniMAXI</SetVariable>
              </Template>
              <!-- For the almost identical toggler in 'normal' mode this would be enough
                  to bring MiniMaxiButton to top. Here, 'AlignTop' for parent or grand-parent
                  WidgetGroup have no effect, only this expanding spacer helps. -->
              <WidgetGroup><Size>1min,1me</Size><Children/></WidgetGroup>
            </Children>
            <Connection>
              <ConfigKey>[Tango],netbook_mode</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup><!-- mini/MAXI toggler for netbook mode -->

          <WidgetGroup><!-- EffectUnit 2 -->
            <SizePolicy>me,min</SizePolicy>
            <Layout>horizontal</Layout>
            <Children>

              <!-- Spacer to keep Deck & FX unit aligned -->
              <WidgetGroup><Size>56f,1min</Size><Children/>
                <Connection>
                  <ConfigKey>[Tango],normal_mode</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>

              <WidgetStack currentpage="[Tango],fx_units_12_miniMAXI_stack" persist="true">
                <SizePolicy>min,max</SizePolicy>
                <Children>

                  <WidgetGroup trigger="[Tango],fx_units_12_miniMAXI" persist="true" on-hide-select="1">
                    <Layout>vertical</Layout>
                    <Children>
                      <Template src="skin:fx_unit_right.xml">
                        <SetVariable name="EffectRack">1</SetVariable>
                        <SetVariable name="EffectUnit">2</SetVariable>
                      </Template>
                    </Children>
                    <Connection>
                      <ConfigKey persist="true">[Tango],fx_units_12_miniMAXI</ConfigKey>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup>

                  <Template src="skin:fx_unit_right_mini.xml" on-hide-select="0">
                    <SetVariable name="EffectRack">1</SetVariable>
                    <SetVariable name="EffectUnit">2</SetVariable>
                  </Template>

                </Children>
              </WidgetStack>

            </Children>
          </WidgetGroup><!-- /EffectUnit 2 -->

        </Children>
      </WidgetGroup><!-- /EffectUnits 1 & 2 -->

      <!-- Spacer between [Decks 1/2 + FX Units 1/2] and
                          [Decks 3/4 + FX Units 3/4] -->
      <WidgetGroup>
        <SizePolicy>me,min</SizePolicy>
        <Layout>vertical</Layout>
        <Children>
          <WidgetGroup><Size>1me,7f</Size><Children/>
            <Connection>
              <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>
        </Children>
        <Connection>
          <ConfigKey persist="true">[Tango],2or4_fxUnits</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup><!-- Spacer between [Decks 1/2 + FX Units 1/2] and
                          [Decks 3/4 + FX Units 3/4] -->

    </Children>
    <Connection>
      <ConfigKey persist="true">[EffectRack1],show</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
</Template>
