<!--
  Description:
    An effect chain widget.
  Variables:
    EffectRack: Number of effect rack.
    EffectUnit: Number of effect unit.
-->
<Template>
  <SetVariable name="group">[EffectRack<Variable name="EffectRack"/>_EffectUnit<Variable name="EffectUnit"/>]</SetVariable>
  <WidgetGroup><!-- EffectUnit -->
    <ObjectName>EffectUnit<Variable name="EffectUnit"/></ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>me,max</SizePolicy>
    <Children>

      <WidgetGroup><Size>1f,1min</Size></WidgetGroup>

      <WidgetGroup><!-- FX Unit toggler & miniMaxi button -->
        <ObjectName>AlignTopLeft</ObjectName>
        <SizePolicy>min,min</SizePolicy>
        <Layout>vertical</Layout>
        <Children>
          <Template src="skin:button_2state_persist.xml">
            <SetVariable name="ObjectName">FxMiniMaxiButton</SetVariable>
            <SetVariable name="Size">22f,13f</SetVariable>
            <SetVariable name="ConfigKeyPerm"><Variable name="group"/>,show_parameters</SetVariable>
          </Template>
            <WidgetGroup><Size>1min,1f</Size><Children/></WidgetGroup>
          <Template src="skin:button_2state.xml">
            <SetVariable name="ToolTipId">EffectUnit_enabled</SetVariable>
            <SetVariable name="ObjectName">EffectUnitToggleButton</SetVariable>
            <SetVariable name="Size">22f,1me</SetVariable>
            <SetVariable name="ConfigKey"><Variable name="group"/>,enabled</SetVariable>
          </Template>
        </Children>
      </WidgetGroup><!-- /FX Unit toggler & miniMaxi button -->

      <WidgetGroup><Size>1f,1min</Size></WidgetGroup>

      <WidgetGroup>
        <ObjectName>SuperWetDryContainer</ObjectName>
        <Layout>horizontal</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>

          <Template src="skin:fx_superwetdry_knob_mini.xml">
            <SetVariable name="ToolTipId">EffectUnit_mix</SetVariable>
            <SetVariable name="ObjectName">SuperWetDry</SetVariable>
            <SetVariable name="ConfigKey">mix</SetVariable>
            <SetVariable name="Color">red</SetVariable>
          </Template>

          <Template src="skin:fx_superwetdry_knob_mini.xml">
            <SetVariable name="ToolTipId">EffectUnit_super1</SetVariable>
            <SetVariable name="ObjectName">SuperWetDry</SetVariable>
            <SetVariable name="ConfigKey">super1</SetVariable>
            <SetVariable name="Color">blue</SetVariable>
          </Template>

        </Children>
      </WidgetGroup><!-- /SuperWetDryContainer -->

      <WidgetGroup><!-- Effect togglers * highlightable -->
        <ObjectName>AlignRightCenter</ObjectName>
        <SizePolicy>me,min</SizePolicy>
        <Layout>horizontal</Layout>
        <Children>

          <WidgetGroup><ObjectName>Spacer0f</ObjectName><Size>1f,1min</Size></WidgetGroup>

          <WidgetGroup>
            <ObjectName>EffectSlotRightHighlight</ObjectName>
            <Layout>horizontal</Layout>
            <SizePolicy>min,me</SizePolicy>
            <Children>
              <Template src="skin:fx_toggler_right.xml">
                <SetVariable name="Effect">1</SetVariable>
                <SetVariable name="fxSelectorSize">74f,20f</SetVariable>
                <SetVariable name="fxFocusSize">12f,32f</SetVariable>
              </Template>
              <WidgetGroup><Size>4f,1min</Size></WidgetGroup>
            </Children>
            <Connection>
              <ConfigKey>[EffectRack<Variable name="EffectRack"/>_EffectUnit<Variable name="EffectUnit"/>],focused_effect</ConfigKey>
              <BindProperty>highlight</BindProperty>
              <Transform><IsEqual>1</IsEqual></Transform>
            </Connection>
          </WidgetGroup>

          <WidgetGroup><ObjectName>Spacer0f</ObjectName><Size>1f,1min</Size></WidgetGroup>

          <WidgetGroup>
            <ObjectName>EffectSlotRightHighlight</ObjectName>
            <Layout>horizontal</Layout>
            <SizePolicy>min,me</SizePolicy>
            <Children>
              <Template src="skin:fx_toggler_right.xml">
                <SetVariable name="Effect">2</SetVariable>
                <SetVariable name="fxSelectorSize">74f,20f</SetVariable>
              </Template>
              <WidgetGroup><Size>4f,1min</Size></WidgetGroup>
            </Children>
            <Connection>
              <ConfigKey>[EffectRack<Variable name="EffectRack"/>_EffectUnit<Variable name="EffectUnit"/>],focused_effect</ConfigKey>
              <BindProperty>highlight</BindProperty>
              <Transform><IsEqual>2</IsEqual></Transform>
            </Connection>
          </WidgetGroup>

          <WidgetGroup><ObjectName>Spacer0f</ObjectName><Size>1f,1min</Size></WidgetGroup>

          <WidgetGroup>
            <ObjectName>EffectSlotRightHighlight</ObjectName>
            <Layout>horizontal</Layout>
            <SizePolicy>min,me</SizePolicy>
            <Children>
              <Template src="skin:fx_toggler_right.xml">
                <SetVariable name="Effect">3</SetVariable>
                <SetVariable name="fxSelectorSize">74f,20f</SetVariable>
              </Template>
              <WidgetGroup><Size>4f,1min</Size></WidgetGroup>
            </Children>
            <Connection>
              <ConfigKey>[EffectRack<Variable name="EffectRack"/>_EffectUnit<Variable name="EffectUnit"/>],focused_effect</ConfigKey>
              <BindProperty>highlight</BindProperty>
              <Transform><IsEqual>3</IsEqual></Transform>
            </Connection>
          </WidgetGroup>

          <WidgetGroup><ObjectName>Spacer0f</ObjectName><Size>1f,1min</Size></WidgetGroup>

          <WidgetGroup><ObjectName>Spacer33</ObjectName><Size>0me,1min</Size></WidgetGroup>

        </Children>
        <Connection>
          <ConfigKey>[EffectRack<Variable name="EffectRack"/>_EffectUnit<Variable name="EffectUnit"/>],show_focus</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup><!-- /Effect togglers * highlightable -->

      <WidgetGroup><!-- Effect togglers * no highlight -->
        <ObjectName>AlignRightCenter</ObjectName>
        <SizePolicy>me,min</SizePolicy>
        <Layout>horizontal</Layout>
        <Children>

          <WidgetGroup><ObjectName>Spacer0f</ObjectName><Size>1f,1min</Size></WidgetGroup>

          <WidgetGroup>
            <ObjectName>EffectSlotRight</ObjectName>
            <Layout>horizontal</Layout>
            <SizePolicy>min,me</SizePolicy>
            <Children>
              <Template src="skin:fx_toggler_right.xml">
                <SetVariable name="Effect">1</SetVariable>
                <SetVariable name="fxSelectorSize">74f,20f</SetVariable>
              </Template>
              <WidgetGroup><Size>4f,1min</Size></WidgetGroup>
            </Children>
          </WidgetGroup>

          <WidgetGroup><ObjectName>Spacer0f</ObjectName><Size>1f,1min</Size></WidgetGroup>

          <WidgetGroup>
            <ObjectName>EffectSlotRight</ObjectName>
            <Layout>horizontal</Layout>
            <SizePolicy>min,me</SizePolicy>
            <Children>
              <Template src="skin:fx_toggler_right.xml">
                <SetVariable name="Effect">2</SetVariable>
                <SetVariable name="fxSelectorSize">74f,20f</SetVariable>
              </Template>
              <WidgetGroup><Size>4f,1min</Size></WidgetGroup>
            </Children>
          </WidgetGroup>

          <WidgetGroup><ObjectName>Spacer0f</ObjectName><Size>1f,1min</Size></WidgetGroup>

          <WidgetGroup>
            <ObjectName>EffectSlotRight</ObjectName>
            <Layout>horizontal</Layout>
            <SizePolicy>min,me</SizePolicy>
            <Children>
              <Template src="skin:fx_toggler_right.xml">
                <SetVariable name="Effect">3</SetVariable>
                <SetVariable name="fxSelectorSize">74f,20f</SetVariable>
              </Template>
              <WidgetGroup><Size>4f,1min</Size></WidgetGroup>
            </Children>
          </WidgetGroup>

          <WidgetGroup><ObjectName>Spacer0f</ObjectName><Size>1f,1min</Size></WidgetGroup>

          <WidgetGroup><ObjectName>Spacer33</ObjectName><Size>0me,1min</Size></WidgetGroup>

        </Children>
        <Connection>
          <ConfigKey>[EffectRack<Variable name="EffectRack"/>_EffectUnit<Variable name="EffectUnit"/>],show_focus</ConfigKey>
          <BindProperty>visible</BindProperty>
          <Transform><Not/></Transform>
        </Connection>
      </WidgetGroup><!-- /Effect togglers * no highlight -->

    </Children>
  </WidgetGroup><!-- /EffectUnit -->
</Template>
