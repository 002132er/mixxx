<!--
Description:
  Horizontal spacers between left & right icon bar at the top edge.
  Height is zero in order to use it in a vertical stack without consuming space.  
-->
<Template>
  <WidgetGroup>
    <SizePolicy>max,f</SizePolicy>
    <Layout>horizontal</Layout>
    <Children>

      <WidgetGroup><!-- Spacer between decks -->
        <Size>12f,0f</Size>
      </WidgetGroup>

      <WidgetGroup><!-- Pitch fader spacer -->
        <Size>106f,0f</Size>
        <Connection>
          <ConfigKey>[Tango],pitch_fader</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

      <WidgetGroup><!-- VU Meters + Cover/Spinny when Channel Mixer is hidden -->
        <Layout>horizontal</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <WidgetGroup>
            <Size>52f,0f</Size>
            <Connection>
              <ConfigKey>[Tango],vumeter</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>
          <WidgetGroup>
            <Layout>horizontal</Layout>
            <SizePolicy>min,min</SizePolicy>
            <Children>
              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Size>228f,0f</Size>
                <Connection>
                  <ConfigKey>[Tango],show_spinny_cover</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>
            </Children>
            <Connection>
              <ConfigKey>[Tango],spinnyCoverBIG</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>
        </Children>
        <Connection>
          <ConfigKey>[Tango],channel_mixer</ConfigKey>
          <BindProperty>visible</BindProperty>
          <Transform><Not/></Transform>
        </Connection>
      </WidgetGroup><!-- /VU Meter + Cover/Spinny when Channel Mixer is hidden -->

      <WidgetGroup><!-- Channel Mixer, EQs and Filter knobs -->
        <Layout>horizontal</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <WidgetGroup><!-- Basic mixer incl. VU Meter (channel & master) -->
            <Layout>horizontal</Layout>
            <Size>150f,0f</Size>
          </WidgetGroup>
          <WidgetGroup><!-- EQ knobs -->
            <Layout>horizontal</Layout>
            <Size>96f,0f</Size>
            <Connection>
              <ConfigKey>[Tango],eq_knobs</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>
        </Children>
        <Connection>
          <ConfigKey>[Tango],channel_mixer</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup><!-- /Channel Mixer, EQs and Filter knobs -->
    </Children>
  </WidgetGroup>
</Template>
