<!--
Description:
  An effect parameter button.
  Stacked layout of invisible button, parameter name
  and button display underneath.
Variables:
  FxRack        : rack number
  FxUnit        : unit number
  FxGroup_FxNum : EffectRack1_EffectUnitX_EffectY
  FxNum         : effect number
  parameter     : the parameter
-->
<Template>
  <SetVariable name="group">EffectUnit<Variable name="FxUnit"/></SetVariable>
  <SetVariable name="FxGroup">EffectRack1_EffectUnit<Variable name="FxUnit"/></SetVariable>
  <SetVariable name="FxGroup_FxNum">[<Variable name="FxGroup"/>_Effect<Variable name="FxNum"/>]</SetVariable>
  <WidgetGroup>
    <Layout>stacked</Layout>
    <ObjectName>FxButtonParameter</ObjectName>
  <!-- working around disrespected AlignVCenter when Connection is applied.
      Available height is 38px, button is 18px & we want it in a row with its adjacent knobs -->
    <Size>52f,26f</Size>
    <Children>
      <!-- Actual button, invisible except hover border -->
      <Template src="skin:fx_button.xml">
        <SetVariable name="ObjectName">FxButtonParameterOverlay</SetVariable>
        <SetVariable name="Size">51f,18f</SetVariable>
        <SetVariable name="parameter">button_parameter<Variable name="parameter"/></SetVariable>
      </Template>

      <!-- Name of effect parameter -->
      <WidgetGroup>
        <Size>51f,18f</Size>
        <Layout>horizontal</Layout>
        <Children>
          <WidgetGroup><SizePolicy>me,min</SizePolicy></WidgetGroup>
          <EffectButtonParameterName>
            <SizePolicy>min,me</SizePolicy>
            <ObjectName>FxButtonParameterName</ObjectName>
            <EffectRack><Variable name="FxRackNum"/></EffectRack>
            <EffectUnit><Variable name="FxUnit"/></EffectUnit>
            <Effect><Variable name="FxNum"/></Effect>
            <EffectButtonParameter><Variable name="parameter"/></EffectButtonParameter>
            <Alignment>center</Alignment>
          </EffectButtonParameterName>
          <WidgetGroup><SizePolicy>me,min</SizePolicy></WidgetGroup>
        </Children>
      </WidgetGroup>

      <!-- Button to indicate parameter state -->
      <Template src="skin:fx_button.xml">
        <SetVariable name="ObjectName">FxButtonParameterUnderlay</SetVariable>
        <SetVariable name="Size">51f,18f</SetVariable>
        <SetVariable name="parameter">button_parameter<Variable name="parameter"/></SetVariable>
      </Template>
    </Children>
    <!-- show only if button parameter is loaded -->
    <Connection>
      <ConfigKey><Variable name="FxGroup_FxNum"/>,button_parameter<Variable name="parameter"/>_loaded</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
</Template>
