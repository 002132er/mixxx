<!--
Description:
  Container for the master level meter, suiting various configurations.
-->
<Template>
  <SingletonDefinition>
    <ObjectName>VuMeterMaster</ObjectName>
    <Children>
      <WidgetGroup>
        <ObjectName></ObjectName>
        <Size>min,min</Size>
        <Layout>vertical</Layout>
        <Children>
          <Template src="skin:vumeter_master.xml"/>
        </Children>
      </WidgetGroup>
    </Children>
  </SingletonDefinition>

  <WidgetGroup>
    <Layout>horizontal</Layout>
    <SizePolicy>max,min</SizePolicy>
    <Children>

      <!-- Master VU when mixer is hidden but permament level meters are shown -->
      <WidgetGroup>
        <Layout>horizontal</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <WidgetGroup>
            <ObjectName></ObjectName>
            <Size>min,min</Size>
            <Layout>vertical</Layout>
            <Children>
              <SingletonContainer>
                <ObjectName>VuMeterMaster</ObjectName>
              </SingletonContainer>
            </Children>
            <Connection>
              <ConfigKey persist="true">[Tango],vumeter</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>
        </Children>
        <Connection>
          <ConfigKey persist="true">[Master],show_mixer</ConfigKey>
          <Transform><Not/></Transform>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>
      <!-- /Master VU when mixer is hidden but permament level meters are shown -->

      <WidgetGroup><!-- Master VU when mixer is shown -->
        <Layout>horizontal</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <SingletonContainer>
            <ObjectName>VuMeterMaster</ObjectName>
          </SingletonContainer>
        </Children>
        <Connection>
          <ConfigKey persist="true">[Master],show_mixer</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
