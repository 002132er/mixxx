<!--
Description:
  Container for the master level meter, suiting various configurations.
-->
<Template>
  <WidgetGroup>
    <Layout>horizontal</Layout>
    <SizePolicy>max,min</SizePolicy>
    <Children>

      <WidgetGroup><!-- Master VU when mixer is shown -->
        <Layout>horizontal</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <Template src="skin:vumeter_master.xml"/>
        </Children>
        <Connection>
          <ConfigKey persist="true">[Tango],channel_mixer</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup><!-- /Master VU when mixer is shown -->

      <!-- Master VU when mixer is hidden but permament level meters are shown -->
      <WidgetGroup>
        <Layout>horizontal</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <WidgetGroup>
            <ObjectName></ObjectName>
            <Size>min,min</Size>
            <Layout>horizontal</Layout>
            <Children>
              <Template src="skin:vumeter_master.xml"/>
              <!-- spacer for normal mode when Channel Mixer is hidden -->
              <WidgetGroup>
                <Layout>vertical</Layout>
                <Size>4f,1min</Size>
                <Connection>
                  <ConfigKey>[Tango],normal_mode</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>
            </Children>
            <Connection>
              <ConfigKey persist="true">[Tango],vumeter</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>
        </Children>
        <Connection>
          <ConfigKey persist="true">[Tango],channel_mixer</ConfigKey>
          <Transform><Not/></Transform>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>
      <!-- /Master VU when mixer is hidden but permament level meters are shown -->

    </Children>
  </WidgetGroup>
</Template>
