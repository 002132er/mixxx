<!--
Description:
	An effect parameter button.
	Stacked layout of invisible button, parameter name
	and button display underneath.
Variables:
	EffectRack: the rack
	EffectUnit: the unit
	Effect: the effect
	EffectButtonParameter: the parameter
	
-->
<Template>
  <WidgetGroup>
    <ObjectName>A</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>

      <WidgetGroup><!-- EffectUnit 3 -->
        <ObjectName>D</ObjectName>
        <SizePolicy>me,min</SizePolicy>
        <Layout>horizontal</Layout>
        <Children>

          <WidgetStack currentpage="[Tango],fx_units_34miniMAXI_stack" persist="true">
            <SizePolicy>min,max</SizePolicy>
            <Children>

              <WidgetGroup trigger="[Tango],fx_units_34_miniMAXI" persist="true" on-hide-select="1">
                <ObjectName>E</ObjectName>
                <Layout>vertical</Layout>
                <SizePolicy>min,max</SizePolicy>
                <Children>
                  <Template src="skin:fx_unit_left.xml">
                    <SetVariable name="EffectRack">1</SetVariable>
                    <SetVariable name="EffectUnit">3</SetVariable>
                  </Template>
                </Children>
                <Connection>
                  <ConfigKey persist="true">[Tango],fx_units_34_miniMAXI</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>

              <Template src="skin:fx_unit_left_mini.xml" on-hide-select="0">
                <SetVariable name="EffectRack">1</SetVariable>
                <SetVariable name="EffectUnit">3</SetVariable>
              </Template>

            </Children>
          </WidgetStack>

          <!-- Sapcer to keep Deck & FX unit aligned, incl. mini/MAXI toggler -->
          <WidgetGroup>
            <ObjectName>AlignTopLeft</ObjectName>
            <Size>56f,1min</Size>
            <Layout>vertical</Layout>
            <Children>

              <WidgetGroup><Size>1min,3f</Size><Children/></WidgetGroup>

              <Template src="skin:button_2state_persist.xml">
                <SetVariable name="ObjectName">SamplersMiniMaxiButton</SetVariable>
                <SetVariable name="Size">22f,22f</SetVariable>
                <SetVariable name="ConfigKeyPerm">[Tango],fx_units_34_miniMAXI</SetVariable>
              </Template>

            </Children>
          </WidgetGroup>

        </Children>
      </WidgetGroup><!-- /EffectUnit 3 -->

      <!-- Sapcer to keep Deck & FX unit aligned without Pitch fader-->
      <WidgetGroup>
        <Size>106f,1min</Size>
        <Children/>
        <Connection>
          <ConfigKey>[Tango],pitch_fader</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

      <!-- Sapcer to keep Deck & FX unit aligned without Channel Mixer -->
      <WidgetGroup>
        <Size>22f,1min</Size>
        <Children/>
        <Connection>
          <ConfigKey>[Tango],channel_mixer</ConfigKey>
          <BindProperty>visible</BindProperty>
          <Transform><Not/></Transform>
        </Connection>
      </WidgetGroup>

      <WidgetGroup><!-- EffectUnit 4 -->
        <SizePolicy>me,min</SizePolicy>
        <Layout>horizontal</Layout>
        <Children>

          <!-- Sapcer to keep Deck & FX unit aligned -->
          <WidgetGroup><Size>56f,1min</Size><Children/></WidgetGroup>

          <WidgetStack currentpage="[Tango],fx_units_34miniMAXI_stack" persist="true">
            <SizePolicy>min,max</SizePolicy>
            <Children>

              <WidgetGroup trigger="[Tango],fx_units_34_miniMAXI" persist="true" on-hide-select="1">
                <Layout>vertical</Layout>
                <Children>
                  <Template src="skin:fx_unit_right.xml">
                    <SetVariable name="EffectRack">1</SetVariable>
                    <SetVariable name="EffectUnit">4</SetVariable>
                  </Template>
                </Children>
                <Connection>
                  <ConfigKey persist="true">[Tango],fx_units_34_miniMAXI</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>

              <Template src="skin:fx_unit_right_mini.xml" on-hide-select="0">
                <SetVariable name="EffectRack">1</SetVariable>
                <SetVariable name="EffectUnit">4</SetVariable>
              </Template>

            </Children>
          </WidgetStack>

        </Children>
      </WidgetGroup><!-- /EffectUnit 4 -->

    </Children>
    <Connection>
      <ConfigKey persist="true">[EffectRack1],show</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup><!-- /EffectUnits 3 & 4 -->
</Template>
