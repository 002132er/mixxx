<!--
Description:
  An expanding filler that appears only if more than XY pixels are available
Variables:
  Size  : Size/SizePolicy for the whole container
  Color : Abbreviated hex color code for the filler, see style.qss
-->
<Template>
  <WidgetGroup>
    <Layout>horizontal</Layout>
    <Size>-1me,17f</Size>
    <Children>
      <WidgetGroup><!-- Left-hand separator -->
        <Layout>vertical</Layout>
        <Size><Variable name="widthLeft"/>,-1min</Size>
        <Children>
          <WidgetGroup>
            <ObjectName>Spacer33</ObjectName>
            <SizePolicy>me,me</SizePolicy>
          </WidgetGroup>
          <WidgetGroup>
            <Size>-1me,1f</Size>
          </WidgetGroup>
          <WidgetGroup>
            <ObjectName>Spacer33</ObjectName>
            <SizePolicy>me,me</SizePolicy>
          </WidgetGroup>
        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <ObjectName>FxFlow_maxi_separator</ObjectName>
        <Size>30f,17f</Size>
      </WidgetGroup>

      <WidgetGroup><!-- Right-hand separator -->
        <Layout>vertical</Layout>
        <Size><Variable name="widthRight"/>,-1min</Size>
        <Children>
          <WidgetGroup>
            <ObjectName>Spacer33</ObjectName>
            <SizePolicy>me,me</SizePolicy>
          </WidgetGroup>
          <WidgetGroup>
            <Size>-1me,1f</Size>
          </WidgetGroup>
          <WidgetGroup>
            <ObjectName>Spacer33</ObjectName>
            <SizePolicy>me,me</SizePolicy>
          </WidgetGroup>
        </Children>
      </WidgetGroup>
    </Children>
  </WidgetGroup>
</Template>
