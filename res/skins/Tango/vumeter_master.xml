<!--
Description:
  The master level meter.
  This template is embedded in vumeter_master_container.xml
  whic controls visibility for various configurations.
Variables:
  group : [ChannelXY]
-->
<Template>
  <WidgetGroup>
    <Layout>vertical</Layout>
    <SizePolicy>min,me</SizePolicy>
    <Children>
      <WidgetGroup><!-- Left + Right VU -->
        <Layout>horizontal</Layout>
        <SizePolicy>min,max</SizePolicy>
        <Children>
          <WidgetGroup><!-- Left VU -->
            <Layout>stacked</Layout>
            <Size>4f,1me</Size>
            <Children>
              <StatusLight>
                <TooltiId>master_VuMeter</TooltiId>
                <PathStatusLight>skin:/graphics/vumeter_floating_clipping_over.png</PathStatusLight>
                <PathBack>skin:/graphics/vumeter_floating_clipping.png</PathBack>
                <Connection>
                  <ConfigKey>[Master],PeakIndicatorL</ConfigKey>
                </Connection>
              </StatusLight>
              <VuMeter>
                <PathVu>skin:/graphics/vumeter_floating_over.png</PathVu>
                <PathBack>skin:/graphics/vumeter_floating.png</PathBack>
                <Horizontal>false</Horizontal>
                <PeakHoldSize>5</PeakHoldSize>
                <PeakHoldTime>500</PeakHoldTime>
                <PeakFallTime>50</PeakFallTime>
                <PeakFallStep>2</PeakFallStep>
                <Connection>
                  <ConfigKey>[Master],VuMeterL</ConfigKey>
                </Connection>
              </VuMeter>
            </Children>
          </WidgetGroup><!-- /Left VU -->
                  
          <WidgetGroup><!-- Right VU -->
            <Layout>stacked</Layout>
            <Size>4f,1me</Size>
            <Children>
              <StatusLight>
                <TooltiId>master_VuMeter</TooltiId>
                <PathStatusLight>skin:/graphics/vumeter_floating_clipping_over.png</PathStatusLight>
                <PathBack>skin:/graphics/vumeter_floating_clipping.png</PathBack>
                <Connection>
                  <ConfigKey>[Master],PeakIndicatorR</ConfigKey>
                </Connection>
              </StatusLight>
              <VuMeter>
                <PathVu>skin:/graphics/vumeter_floating_over.png</PathVu>
                <PathBack>skin:/graphics/vumeter_floating.png</PathBack>
                <Horizontal>false</Horizontal>
                <PeakHoldSize>5</PeakHoldSize>
                <PeakHoldTime>500</PeakHoldTime>
                <PeakFallTime>50</PeakFallTime>
                <PeakFallStep>2</PeakFallStep>
                <Connection>
                  <ConfigKey>[Master],VuMeterR</ConfigKey>
                </Connection>
              </VuMeter>
            </Children>
          </WidgetGroup><!-- /Right VU -->
        </Children>
      </WidgetGroup><!-- /Left + Right VU -->

      <WidgetGroup><Size>0min,2f</Size></WidgetGroup>

      <WidgetGroup>
        <ObjectName>VUMeterMasterLabel</ObjectName>
        <Size>22f,22f</Size>
      </WidgetGroup>

      <WidgetGroup><Size>0min,0me</Size></WidgetGroup>
    </Children>
  </WidgetGroup>
</Template>
