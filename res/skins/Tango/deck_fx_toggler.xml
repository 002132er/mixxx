<!--
Description:
  A simple indicator for usage in decks' artist/duration row,
  showing if an effect unit is assigned to parent deck.
  Visible only if assigned.
Variables:
  fxGroup : [EffectRack1_EffectUnitN]
  channum : [ChannelN]
-->
<Template>
  <WidgetGroup>
    <Size>28f,16f</Size>
    <Layout>stacked</Layout>
    <Children>
      <PushButton>
        <TooltipId>EffectUnit_group_enabled</TooltipId>
        <ObjectName>EffectUnitGroupButton</ObjectName>
        <Size>28f,16f</Size>
        <NumberStates>2</NumberStates>
        <State>
          <Number>0</Number>
          <Text>FX<Variable name="fxUnit"/></Text>
          <Alignment>center</Alignment>
        </State>
        <State>
          <Number>1</Number>
          <Text>FX<Variable name="fxUnit"/></Text>
          <Alignment>center</Alignment>
        </State>
        <Connection>
          <ConfigKey>[EffectRack1_EffectUnit<Variable name="fxUnit"/>],group_[Channel<Variable name="channum"/>]_enable</ConfigKey>
          <ButtonState>LeftButton</ButtonState>
        </Connection>
      </PushButton>

      <Template src="skin:button_2state.xml">
        <SetVariable name="TooltipId">EffectUnit_enabled</SetVariable>
        <SetVariable name="ObjectName">EffectUnitGroupButtonUnderlay</SetVariable>
        <SetVariable name="Size"><Size>28f,16f</Size></SetVariable>
        <SetVariable name="ConfigKey">[EffectRack1_EffectUnit<Variable name="fxUnit"/>],enabled</SetVariable>
      </Template>
    </Children>
  </WidgetGroup>
</Template>
