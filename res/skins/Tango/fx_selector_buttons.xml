<!--
Description:
  Effect selector buttons
  - previous effect
  - effect name with toggle button over/underlay
  - next effect
Variables:
  EffectRack: the rack
  EffectUnit: the chain
  Effect: the effect
-->
<Template>
  <SetVariable name="group">[EffectRack<Variable name="EffectRack"/>_EffectUnit<Variable name="EffectUnit"/>_Effect<Variable name="Effect"/>]</SetVariable>
  <WidgetGroup>
    <Layout>horizontal</Layout>
    <Size>114f,20f</Size>
    <Children>

      <Template src="skin:button_1state.xml">
        <SetVariable name="ToolTipId">EffectSlot_prev_effect</SetVariable>
        <SetVariable name="ObjectName">EffectSelectorButtonPrev</SetVariable>
        <SetVariable name="Size">20f,20f</SetVariable>
        <SetVariable name="ConfigKey"><Variable name="group"/>,prev_effect</SetVariable>
      </Template>

      <Template src="skin:fx_toggler.xml"/>

      <Template src="skin:button_1state.xml">
        <SetVariable name="ToolTipId">EffectSlot_next_effect</SetVariable>
        <SetVariable name="ObjectName">EffectSelectorButtonNext</SetVariable>
        <SetVariable name="Size">20f,20f</SetVariable>
        <SetVariable name="ConfigKey"><Variable name="group"/>,next_effect</SetVariable>
      </Template>
    </Children>
  </WidgetGroup>
</Template>
