<!--
Description:
  An expanding filler that appears only if more than XY pixels are available
Variables:
  Size  : Size/SizePolicy for the whole container
  Color : Abbreviated hex color code for the filler, see style.qss
-->
<Template>
  <WidgetGroup>
    <Layout>horizontal</Layout>
    <Size>-1me,17f</Size>
    <Children>
      <WidgetGroup><!-- Left-hand separator -->
        <Layout>vertical</Layout>
        <Size><Variable name="widthLeft"/>,-1min</Size>
        <Children>
          <WidgetGroup>
            <ObjectName>FxFlow_focus_background</ObjectName>
            <SizePolicy>me,me</SizePolicy>
            <Connection>
              <ConfigKey>[<Variable name="FxRack_FxUnit"/>],focused_effect</ConfigKey>
              <Transform><IsEqual><Variable name="FxTop"/></IsEqual></Transform>
              <BindProperty>highlight</BindProperty>
            </Connection>
          </WidgetGroup>

          <WidgetGroup>
            <Size>-1me,1f</Size>
          </WidgetGroup>

          <WidgetGroup>
            <ObjectName>FxFlow_focus_background</ObjectName>
            <SizePolicy>me,me</SizePolicy>
            <Connection>
              <ConfigKey>[<Variable name="FxRack_FxUnit"/>],focused_effect</ConfigKey>
              <Transform><IsEqual><Variable name="FxBottom"/></IsEqual></Transform>
              <BindProperty>highlight</BindProperty>
            </Connection>
          </WidgetGroup>
        </Children>
      </WidgetGroup><!-- /Left-hand separator -->

      <WidgetGroup>
        <ObjectName>FxFlow_maxi_focus_separator<Variable name="FxTop"/>-<Variable name="FxBottom"/></ObjectName>
        <Size>30f,17f</Size>
        <Connection>
          <ConfigKey>[<Variable name="FxRack_FxUnit"/>],focused_effect</ConfigKey>
          <BindProperty>highlight</BindProperty>
        </Connection>
      </WidgetGroup>

      <WidgetGroup><!-- Left-hand separator -->
        <Layout>vertical</Layout>
        <Size><Variable name="widthRight"/>,-1min</Size>
        <Children>
          <WidgetGroup>
            <ObjectName>FxFlow_focus_background</ObjectName>
            <SizePolicy>me,me</SizePolicy>
            <Connection>
              <ConfigKey>[<Variable name="FxRack_FxUnit"/>],focused_effect</ConfigKey>
              <Transform><IsEqual><Variable name="FxTop"/></IsEqual></Transform>
              <BindProperty>highlight</BindProperty>
            </Connection>
          </WidgetGroup>

          <WidgetGroup>
            <Size>-1me,1f</Size>
          </WidgetGroup>

          <WidgetGroup>
            <ObjectName>FxFlow_focus_background</ObjectName>
            <SizePolicy>me,me</SizePolicy>
            <Connection>
              <ConfigKey>[<Variable name="FxRack_FxUnit"/>],focused_effect</ConfigKey>
              <Transform><IsEqual><Variable name="FxBottom"/></IsEqual></Transform>
              <BindProperty>highlight</BindProperty>
            </Connection>
          </WidgetGroup>
        </Children>
      </WidgetGroup><!-- /Left-hand separator -->
    </Children>
  </WidgetGroup>
</Template>
