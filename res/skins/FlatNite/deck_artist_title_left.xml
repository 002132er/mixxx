<Template>
  <WidgetGroup>
    <SizePolicy>me,me</SizePolicy>
    <Layout>stacked</Layout>
    <Children>
      
      <WidgetGroup><!-- DeckArtistTitle -->
        <ObjectName>DeckArtistTitleLoopLeft</ObjectName>
        <Layout>horizontal</Layout>
        <SizePolicy>me,me</SizePolicy>
        <Children>
          <WidgetGroup><!-- Artist & Title rows -->		
            <Layout>vertical</Layout>
            <SizePolicy>me,me</SizePolicy>
            <Children>
              <WidgetGroup><!-- TitleTimeRow -->
                <ObjectName>TitleTimeRow</ObjectName>
                <Layout>horizontal</Layout>
                <SizePolicy>me,me</SizePolicy>
                <Children>
                  <TrackProperty>
                    <ObjectName>TrackTitle</ObjectName>
                    <TooltipId>track_title</TooltipId>
                    <Property>title</Property>
                    <Alignment>Left</Alignment>
                    <Elide>right</Elide>
                    <Size>1me,22f</Size>
                    <Channel><Variable name="channum"/></Channel>
                  </TrackProperty>
          
                  <NumberPos>
                    <ObjectName>TrackTime</ObjectName>
                    <TooltipId>track_time</TooltipId>
                    <Size>80f,22f</Size>
                    <Alignment>right</Alignment>
                    <Channel><Variable name="channum"/></Channel>
                    <NumberOfDigits>1</NumberOfDigits>
                    <Connection>
                      <ConfigKey>[Channel<Variable name="channum"/>],playposition</ConfigKey>
                    </Connection>
                  </NumberPos>
                </Children>
              </WidgetGroup><!-- /TitleTimeRow -->
  
              <WidgetGroup><!-- ArtistDurationRow -->
                <ObjectName>ArtistDurationRow</ObjectName>
                <Layout>horizontal</Layout>
                <SizePolicy>me,me</SizePolicy>
                <Children>
                  <!--	have to wrap 'by' in an extra WidgetGroup to be able
                  to color text with qss (TrackBy WLabel).
                  Otherwise color defaults to Deck# WLabel (deck color) 
                  -->
                  <WidgetGroup>
                    <ObjectName>TrackBy</ObjectName>
                    <Size>20f,20f</Size>
                    <Layout>horizontal</Layout>
                    <Children>
                      <Label>
                        <Text>by </Text>
                        <Alignment>left</Alignment>						
                      </Label>
                    </Children>
                  </WidgetGroup>
      
                  <TrackProperty>
                    <ObjectName>TrackArtist</ObjectName>
                    <Elide>right</Elide>
                    <Size>1me,20f</Size>
                    <TooltipId>track_artist</TooltipId>
                    <Property>artist</Property>
                    <Channel><Variable name="channum"/></Channel>
                  </TrackProperty>
      
                  <TrackProperty>
                    <ObjectName>TrackDuration</ObjectName>
                    <Size>50f,20f</Size>
                    <TooltipId>track_duration</TooltipId>
                    <Property>durationFormatted</Property>
                    <Alignment>right</Alignment>
                    <Channel><Variable name="channum"/></Channel>
                  </TrackProperty>
                </Children>
              </WidgetGroup><!-- /ArtistDurationRow -->
      
            </Children>
          </WidgetGroup><!-- Artist & Title rows -->
      
          <Template src="skin:loop_indicator.xml"/>
  
        </Children>
        <Connection>
          <ConfigKey>[Channel<Variable name="channum"/>],passthrough</ConfigKey>
          <BindProperty>visible</BindProperty>
          <Transform><Not/></Transform>
        </Connection>
      </WidgetGroup><!-- DeckArtistTitle -->
      
      <!-- zero-sized [index0] to prevent [index1] from being visible by default -->
      <WidgetGroup><Size>0f,0f</Size><Children/></WidgetGroup><!-- /Passthrough -->
      
      <!-- Show alternate Artist/Title when (Vinyl) Passthrough is enabled on deck -->
      <WidgetGroup>
        <ObjectName>DeckTitlePassthroughLeft</ObjectName>
        <Layout>horizontal</Layout>
        <Size>100me,40me</Size>
        <Children/>
        <Connection>
          <ConfigKey>[Channel<Variable name="channum"/>],passthrough</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup><!-- /Passthrough -->
    </Children>
  </WidgetGroup>
</Template>
