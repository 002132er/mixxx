<!--
Description:
  Container for either BIG CoverArt or BIG Spinny (with or without Cover)
Variables:
  channum: channel number
  [FlatNite],spinny0_cover1_stack: show Spinny or CoverArt
  [FlatNite],spinnyWithCoverArt_stack: show Spinny with or without Cover
-->
<Template>	
  <WidgetStack currentpage="[FlatNite],spinny0_cover1_stack" persist="true">
    <ObjectName>SpinnyCoverBig</ObjectName>
    <Size>111f,136f</Size><!-- 3 + 111px + 3px -->
    <Children>
      <WidgetStack currentpage="[FlatNite],spinnyWithCoverArt_stack" persist="true">
        <Size>111f,111f</Size>
        <Children>
          <Spinny>
            <TooltipId>spinny</TooltipId>
            <Size>111f,111f</Size>
            <Group>[Channel<Variable name="channum"/>]</Group>
            <PathBackground scalemode="STRETCH_ASPECT">skin:/graphics/spinnyBig_bg.svg</PathBackground>
            <PathMask scalemode="STRETCH_ASPECT">skin:/graphics/spinnyBig_mask.svg</PathMask>
            <PathForeground scalemode="STRETCH_ASPECT">skin:/graphics/spinnyBig_indicator.svg</PathForeground>
            <PathGhost scalemode="STRETCH_ASPECT">skin:/graphics/spinnyBig_indicator_ghost.svg</PathGhost>
            <ShowCover>false</ShowCover>
          </Spinny>
          <Spinny trigger="[FlatNite],spinnyWithCoverArt" persist="true" on-hide-select="0">
            <TooltipId>spinny</TooltipId>
            <Size>111f,111f</Size>
            <Group>[Channel<Variable name="channum"/>]</Group>
            <PathBackground scalemode="STRETCH_ASPECT">skin:/graphics/spinnyBig_bg.svg</PathBackground>
            <PathMask scalemode="STRETCH_ASPECT">skin:/graphics/spinnyBig_mask.svg</PathMask>
            <PathForeground scalemode="STRETCH_ASPECT">skin:/graphics/spinnyBig_indicator.svg</PathForeground>
            <PathGhost scalemode="STRETCH_ASPECT">skin:/graphics/spinnyBig_indicator_ghost.svg</PathGhost>
            <ShowCover>true</ShowCover>
            <Connection>
              <ConfigKey persist="true">[FlatNite],spinnyWithCoverArt</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </Spinny>
        </Children>
      </WidgetStack>
      <CoverArt trigger="[FlatNite],spinny0_cover1" persist="true" on-hide-select="0">
        <Size>111f,111f</Size>
        <Group>[Channel<Variable name="channum" />]</Group>
        <DefaultCover>skin:/graphics/cover_default_big.svg</DefaultCover>
        <Connection>
          <ConfigKey persist="true">[FlatNite],spinny0_cover1</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </CoverArt>
    </Children>
  </WidgetStack>
</Template>
