<!--
Description:
  The channel mixer containing
  * EQs incl. Kill buttons
  * Headphone cue button
  * Volume slider
  * Gain knob
  * VUMeter
Variables:
  ToolTip/ToolTipID
  ObjectName
  Size
  group: The affected group.
  channum: channel number.
  parameter: number of EQ parameter.
  Knob graphics
  Button graphics
  Slider graphics
  [EqualizerRack1_[Channel1]_Effect1],parameter{1,2,3}
  [EqualizerRack1_[Channel1]_Effect1],button_parameter{1,2,3}
-->
<Template>
  <SetVariable name="group">[Channel<Variable name="channum"/>]</SetVariable>
  <WidgetGroup>
    <ObjectName>MixerChannelRight</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>min,me</SizePolicy>
    <Children>

    <!-- No matter if VUMeter is visible, make sure there's 4px padding on the left -->
      <WidgetGroup><Size>2f,1me</Size><Children/></WidgetGroup>
      <Template src="skin:vumeter_mixer.xml"/><!-- 12px = 2px + 8px + 2px -->
      <WidgetGroup><Size>2f,1me</Size><Children/></WidgetGroup>

      <WidgetGroup><!--  Volume Slider + Gain knob --><!-- 36px -->
        <ObjectName>VolumeSliderGain</ObjectName>
        <Layout>vertical</Layout>
        <Size>36f,1me</Size>
        <Children>
          <SliderComposed><!-- Volume slider -->
            <ObjectName>VolumeSlider</ObjectName>
            <TooltipId>channel_volume</TooltipId>
            <Slider>skin:/knobs_sliders/slider_volume_v_scale.svg</Slider>
            <Handle>skin:/knobs_sliders/slider_volume_v_handle.svg</Handle>
            <Horizontal>false</Horizontal>
            <Connection>
              <ConfigKey>[Channel<Variable name="channum"/>],volume</ConfigKey>
            </Connection>
          </SliderComposed><!-- /Volume slider -->

          <WidgetGroup><Size>1me,1me</Size><Children/></WidgetGroup>

          <WidgetGroup><!--  Gain knob -->
            <Layout>vertical</Layout>
            <Children>
              <Template src="skin:knob_textless.xml"><!--  Gain knob -->
                <SetVariable name="ObjectName">GainKnob</SetVariable>
                <SetVariable name="ToolTipID">pregain</SetVariable>
                <SetVariable name="Size">30f,30f</SetVariable>
                <SetVariable name="Color">blue</SetVariable>
                <SetVariable name="group">[Channel<Variable name="channum"/>]</SetVariable>
                <SetVariable name="ConfigKey">pregain</SetVariable>
              </Template>
            </Children>
          </WidgetGroup><!--  /Gain knob -->
        </Children>
      </WidgetGroup><!--  /Volume Slider + Gain knob -->

      <WidgetGroup><Size>4f,1me</Size><Children/></WidgetGroup>

      <WidgetGroup><!-- EQs -->
        <ObjectName>EQKnobs</ObjectName>
        <Layout>vertical</Layout>
        <Size>50f,1me</Size>
        <Children>
          <Template src="skin:eq_knob_right.xml"><!-- High EQ -->
            <SetVariable name="parameter">3</SetVariable>
            <SetVariable name="ToolTipID">filterHigh</SetVariable>
          </Template>
            <WidgetGroup><Size>1me,4f</Size><Children/></WidgetGroup>
          <Template src="skin:eq_knob_right.xml"><!-- Mid EQ -->
            <SetVariable name="parameter">2</SetVariable>
            <SetVariable name="ToolTipID">filterMid</SetVariable>
          </Template>
            <WidgetGroup><Size>1me,4f</Size><Children/></WidgetGroup>
          <Template src="skin:eq_knob_right.xml"><!-- Low EQ -->
            <SetVariable name="parameter">1</SetVariable>
            <SetVariable name="ToolTipID">filterLow</SetVariable>
          </Template>
          <WidgetGroup><!-- PflButton -->
            <SizePolicy>me,me</SizePolicy><!-- 9 + 24 +3 -->
            <Layout>horizontal</Layout>
            <Children>
          <!--	Added spacers here because <Pos> and margin only affected
              clickable area, not background-image -->
              <WidgetGroup><Size>12f,1me</Size><Children/></WidgetGroup>
              <Template src="skin:button_2state.xml">
                <SetVariable name="ToolTipID">pfl</SetVariable>
                <SetVariable name="ObjectName">PflButton</SetVariable>
                <SetVariable name="Size">28f,28f</SetVariable>
                <SetVariable name="state_0_pressed">pfl_off.svg</SetVariable>
                <SetVariable name="state_0_unpressed">pfl_off.svg</SetVariable>
                <SetVariable name="state_1_pressed">pfl_on.svg</SetVariable>
                <SetVariable name="state_1_unpressed">pfl_on.svg</SetVariable>
                <SetVariable name="ConfigKey">[Channel<Variable name="channum"/>],pfl</SetVariable>
              </Template>

            </Children>
          </WidgetGroup><!-- /PflButton -->
        </Children>
        <Connection>
          <ConfigKey persist="true">[FlatNite],eq_knobs</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup><!-- /EQs -->
    </Children>
    <Connection>
      <ConfigKey persist="true">[FlatNite],channel_mixer</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
</Template>
