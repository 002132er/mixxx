<!--
Description:
	An effect group control button.
Variables:
  ObjectName
  Size
  Align: Set horizontal label alignment. 
  ToolTip/ToolTipID: The tooltip to display.
	group: The Effect Unit.
	GroupName: The affected group.
	ConfigKey: 'super' or 'mix'
	Color: The knob's notch colour.
	Label: The text to show on the button.
	LabelOff: The backpath in state 0.
	LabelOn: The backpath in state 1.
-->
<Template>
	<Template src="skin:button_2state.xml">
		<SetVariable name="ToolTipId">EffectUnit_group_enabled</SetVariable>
		<SetVariable name="ObjectName">EffectUnitGroupButton</SetVariable>	
		<SetVariable name="Size">1me,1me</SetVariable>
		<SetVariable name="Align"><Variable name="Align"/></SetVariable>
		<SetVariable name="state_0_pressed"><Variable name="LabelOff"/>.svg</SetVariable>
		<SetVariable name="state_0_unpressed"><Variable name="LabelOff"/>.svg</SetVariable>
		<SetVariable name="state_0_text"><Variable name="Label"/></SetVariable>
		<SetVariable name="state_1_pressed"><Variable name="LabelOn"/>.svg</SetVariable>
		<SetVariable name="state_1_unpressed"><Variable name="LabelOn"/>.svg</SetVariable>
		<SetVariable name="state_1_text"><Variable name="Label"/></SetVariable>
		<SetVariable name="ConfigKey"><Variable name="group"/>,group_<Variable name="GroupName"/>_enable</SetVariable>
	</Template>
</Template>
