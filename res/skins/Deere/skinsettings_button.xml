<!DOCTYPE template>
<!--
  Description:
    A button that has a left-click display control and a right-click control.
  Variables:
    ObjectName: The object name.
    Size: the button size.
    state_X_text:
    state_X_pressed:
    state_X_unpressed:
-->
<Template>
  <PushButton>
    <TooltipId><Variable name="TooltipId"/></TooltipId>
    <ObjectName>SkinSettingsButton</ObjectName>
    <Size>80me,20f</Size>
    <NumberStates>2</NumberStates>
    <State>
      <Number>0</Number>
      <Text>&#9675; <Variable name="text"/></Text>
      <Alignment>left</Alignment>
    </State>
    <State>
      <Number>1</Number>
      <Text>&#9679; <Variable name="text"/></Text>
      <Alignment>left</Alignment>
    </State>
    <Connection>
      <ConfigKey><Variable name="skinsetting"/></ConfigKey>
      <ButtonState>LeftButton</ButtonState>
    </Connection>
  </PushButton>
</Template>
