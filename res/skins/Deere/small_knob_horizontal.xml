<!DOCTYPE template>
<!--
  Description:
    A small knob.
  Variables:
    control: The control to connect to.
-->
<Template>
  <WidgetGroup>
    <Layout>horizontal</Layout>
    <Children>
      <KnobComposed>
        <Size>20f,20f</Size>
        <Knob>knob_small.svg</Knob>
        <MinAngle>-230</MinAngle>
        <MaxAngle>50</MaxAngle>
        <Connection>
          <ConfigKey><Variable name="group"/>,<Variable name="control"/></ConfigKey>
        </Connection>
      </KnobComposed>
      <Label>
        <Size>15min,10f</Size>
        <MaximumSize>30,10</MaximumSize>
        <ObjectName>SmallKnobLabel</ObjectName>
        <Text><Variable name="label"/></Text>
      </Label>
    </Children>
  </WidgetGroup>
</Template>
