{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "script"
  },
  "rules": {
    "camelcase": "warn",
    "dot-location": "off",
    "eqeqeq": ["error", "always"],
    "no-unused-vars": ["error", {
        "argsIgnorePattern": "^_"
    }],
    "quotes": ["warn", "double"],
    "require-atomic-updates": "error"
  },
  "globals": {
    "console": "writable",
    "svg": "writable",
    "print": "readonly"
  }
}
